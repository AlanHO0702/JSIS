@page
@model PcbErpApi.Pages.EMOdProdInfo.IndexModel
@{
    ViewData["Title"] = "EMOdProdInfo 工程資料維護";
}

<div class="container py-4">
    <h3 class="mb-4 fw-bold">EMOdProdInfo 工程資料維護</h3>
    <form method="post" class="bg-white rounded-3 shadow p-4">

        <!-- 主分頁籤（規格/表單） -->
        <ul class="nav nav-tabs mb-3" id="mainTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="spec-tab" data-bs-toggle="tab" data-bs-target="#spec" type="button" role="tab" aria-controls="spec" aria-selected="true">
                    規格
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="form-tab" data-bs-toggle="tab" data-bs-target="#form" type="button" role="tab" aria-controls="form" aria-selected="false">
                    表單
                </button>
            </li>
        </ul>

        <div class="tab-content" id="mainTabContent">
            <!-- ===== 規格 ===== -->
            <div class="tab-pane fade show active" id="spec" role="tabpanel" aria-labelledby="spec-tab">
                <!-- 次分頁籤 -->
                <ul class="nav nav-pills mb-3" id="specSubTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="sub-main-tab" data-bs-toggle="pill" data-bs-target="#sub-main" type="button" role="tab" aria-controls="sub-main" aria-selected="true">
                            外層工程主檔
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="sub-prod-tab" data-bs-toggle="pill" data-bs-target="#sub-prod" type="button" role="tab" aria-controls="sub-prod" aria-selected="false">
                            成品要求
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="sub-surface-tab" data-bs-toggle="pill" data-bs-target="#sub-surface" type="button" role="tab" aria-controls="sub-surface" aria-selected="false">
                            表面處理
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="sub-tool-tab" data-bs-toggle="pill" data-bs-target="#sub-tool" type="button" role="tab" aria-controls="sub-tool" aria-selected="false">
                            工具規格
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="sub-aps-tab" data-bs-toggle="pill" data-bs-target="#sub-aps" type="button" role="tab" aria-controls="sub-aps" aria-selected="false">
                            APS
                        </button>
                    </li>
                </ul>
                <div class="tab-content" id="specSubTabContent">
                    <!-- 外層工程主檔 -->
                    <div class="tab-pane fade show active" id="sub-main" role="tabpanel" aria-labelledby="sub-main-tab">
                        <div class="row mb-3">
                            <div class="col-md-3">
                                <label class="form-label">結構代碼</label>
                                <input class="form-control" asp-for="StructCode" placeholder="結構代碼" />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">結構內容</label>
                                <input class="form-control" asp-for="StructDesc" placeholder="結構內容" />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Type</label>
                                <select class="form-select" asp-for="Type">
                                    <option value="">請選擇</option>
                                    <option>單面</option>
                                    <option>雙面</option>
                                    <option>多層</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">製作類別</label>
                                <select class="form-select" asp-for="ProcessType">
                                    <option value="">請選擇</option>
                                    <option>新製</option>
                                    <option>改版</option>
                                    <option>維修</option>
                                </select>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label class="form-label">板材尺寸</label>
                                <input class="form-control" asp-for="BoardSize" placeholder="板材尺寸" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">成品板厚</label>
                                <input class="form-control" asp-for="FinalThickness" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">壓合板厚</label>
                                <input class="form-control" asp-for="LamThickness" />
                            </div>
                        </div>
                    </div>
                    <!-- 成品要求 -->
                    <div class="tab-pane fade" id="sub-prod" role="tabpanel" aria-labelledby="sub-prod-tab">
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label class="form-label">成型數量</label>
                                <input class="form-control" asp-for="ProdCount" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">二次成型數</label>
                                <input class="form-control" asp-for="SecondProdCount" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">三次成型數</label>
                                <input class="form-control" asp-for="ThirdProdCount" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label class="form-label">首榜ICT</label>
                                <input class="form-control" asp-for="ICT" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">層數</label>
                                <input class="form-control" asp-for="LayerCount" />
                            </div>
                        </div>
                    </div>
                    <!-- 表面處理 -->
                    <div class="tab-pane fade" id="sub-surface" role="tabpanel" aria-labelledby="sub-surface-tab">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">表面處理方式</label>
                                <input class="form-control" asp-for="SurfaceType" placeholder="如：鍍金、鍍銀、噴錫" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">處理說明</label>
                                <input class="form-control" asp-for="SurfaceDesc" />
                            </div>
                        </div>
                    </div>
                    <!-- 工具規格 -->
                    <div class="tab-pane fade" id="sub-tool" role="tabpanel" aria-labelledby="sub-tool-tab">
                        <div class="row mb-3">
                            <div class="col-md-3">
                                <label class="form-label">客戶代號</label>
                                <input class="form-control" asp-for="CustomerNo" />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">每批數量</label>
                                <input class="form-control" asp-for="BatchQty" />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">X-Out</label>
                                <input class="form-control" asp-for="XOut" />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">成型機數</label>
                                <input class="form-control" asp-for="MachineCount" />
                            </div>
                        </div>
                    </div>
                    <!-- APS -->
                    <div class="tab-pane fade" id="sub-aps" role="tabpanel" aria-labelledby="sub-aps-tab">
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label class="form-label">APS資訊1</label>
                                <input class="form-control" asp-for="APS1" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">APS資訊2</label>
                                <input class="form-control" asp-for="APS2" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ===== 表單 ===== -->
            <div class="tab-pane fade" id="form" role="tabpanel" aria-labelledby="form-tab">
                <!-- 表單分頁 -->
                <ul class="nav nav-pills mb-3" id="formSubTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="sub-press-tab" data-bs-toggle="pill" data-bs-target="#sub-press" type="button" role="tab" aria-controls="sub-press" aria-selected="true">
                            壓合明細/替代料
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="sub-size-tab" data-bs-toggle="pill" data-bs-target="#sub-size" type="button" role="tab" aria-controls="sub-size" aria-selected="false">
                            板材尺寸明細
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="sub-layout-tab" data-bs-toggle="pill" data-bs-target="#sub-layout" type="button" role="tab" aria-controls="sub-layout" aria-selected="false">
                            裁板/排版圖
                        </button>
                    </li>
                </ul>
                <div class="tab-content" id="formSubTabContent">
                    <!-- 壓合明細/替代料 -->
                    <div class="tab-pane fade show active" id="sub-press" role="tabpanel" aria-labelledby="sub-press-tab">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">壓合層別</label>
                                <input class="form-control" asp-for="PressLayer" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">替代料號</label>
                                <input class="form-control" asp-for="AltMaterialNo" />
                            </div>
                        </div>
                    </div>
                    <!-- 板材尺寸明細 -->
                    <div class="tab-pane fade" id="sub-size" role="tabpanel" aria-labelledby="sub-size-tab">
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label class="form-label">材料型號</label>
                                <input class="form-control" asp-for="MaterialModel" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">材料尺寸</label>
                                <input class="form-control" asp-for="MaterialSize" />
                            </div>
                        </div>
                    </div>
                    <!-- 裁板/排版圖 -->
                    <div class="tab-pane fade" id="sub-layout" role="tabpanel" aria-labelledby="sub-layout-tab">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">排版圖號</label>
                                <input class="form-control" asp-for="LayoutNo" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">備註</label>
                                <input class="form-control" asp-for="LayoutRemark" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- 按鈕 -->
        <div class="text-end mt-4">
            <button type="submit" class="btn btn-primary px-4">儲存</button>
            <button type="reset" class="btn btn-outline-secondary ms-2 px-4">重設</button>
        </div>
    </form>
</div>
