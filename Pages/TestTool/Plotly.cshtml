@page
@using PcbErpApi.Pages
@model IndexModel
@{
    ViewData["Title"] = "Plotly.js 範例";
}

<h2>Plotly.js 在 Razor Page 範例</h2>

<!-- 圖表容器 -->
<div id="myPlot" style="width:700px; height:450px;"></div>

<!-- 引用 Plotly.js -->
<script src="https://cdn.plot.ly/plotly-latest.min.js"></script>

<script>
    // 定義數據
    var trace1 = {
        x: [1, 2, 3, 4, 5],
        y: [10, 15, 13, 17, 22],
        type: 'scatter',
        mode: 'lines+markers',
        marker: {color: 'blue'}
    };

    var data = [trace1];

    var layout = {
        title: '簡單折線圖',
        xaxis: {title: 'X 軸'},
        yaxis: {title: 'Y 軸'}
    };

    // 繪製圖表
    Plotly.newPlot('myPlot', data, layout);
</script>
