@model PcbErpApi.Models.GridToolbarConfig
@{
    var p = Model?.Prefix ?? "";
    string Id(string suffix) => string.IsNullOrWhiteSpace(p) ? suffix : $"{p}{suffix}";
}

<div class="mb-2 btn-tight-group" data-role="grid-toolbar" data-prefix="@p">
    <button type="button" class="btn btn-primary btn-sm" id="@Id("btnEdit")">編輯</button>
    <button type="button" class="btn btn-outline-secondary btn-sm" id="@Id("btnAdd")">新增</button>
    <button type="button" class="btn btn-success btn-sm" id="@Id("btnSave")">儲存</button>
    <button type="button" class="btn btn-danger btn-sm" id="@Id("btnDelete")">刪除</button>
    @if (Model?.ShowCancel == true)
    {
        <button type="button" class="btn btn-warning btn-sm" id="@Id("btnCancel")">取消</button>
    }
</div>
