                            table.rows[j].cells[i].style.minWidth = width + 'px';
                            table.rows[j].cells[i].style.maxWidth = width + 'px';
                        }
                    }
                }
                // é–å®šå¯¬åº¦å¾Œï¼Œæ”¹ç”¨ fixed layout é˜²æ­¢å…§å®¹æ”¹è®Šå½±éŸ¿å¯¬åº¦
                table.style.tableLayout = 'fixed';
                console.log('ğŸ”’ æ¬„ä½å¯¬åº¦å·²é–å®š:', Array.from(headerCells).map(c => c.offsetWidth));
