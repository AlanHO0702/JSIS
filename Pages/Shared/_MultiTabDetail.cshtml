        }
    }

    // ä½¿ç”¨ setTimeout ç¢ºä¿ DOM å®Œå…¨å°±ç·’å¾ŒåŸ·è¡Œ
    setTimeout(() => loadFirstTab(), 100);

    // ========== æ–°å¢/åˆªé™¤åˆ—åŠŸèƒ½ ==========

