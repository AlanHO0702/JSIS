                    // åŒæ™‚è¨­å®šæ‰€æœ‰åˆ—çš„å°æ‡‰æ¬„ä½å¯¬åº¦
                    for (let j = 1; j < table.rows.length; j++) {
                        if (table.rows[j].cells[i]) {
