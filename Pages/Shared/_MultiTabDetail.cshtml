                <button class="nav-link @isActive"
                        id="tab-@tab.Id"
                        data-bs-toggle="tab"
                        data-bs-target="#content-@tab.Id"
                        data-api-url="@tab.ApiUrl"
                        data-tab-id="@tab.Id"
                        type="button"
                        role="tab">
