@model List<PcbErpApi.Models.CURdTableField>
@{
    var modalId = ViewData["DictModalId"] as string ?? "fieldDictModal";  // use this id
    var tableName = ViewData["DictTableName"] as string ?? "UnknownTable";
}

<style>
/* ===== container ===== */
.table-fix-wrapper {
  height: 70vh;
  overflow: auto;
  position: relative;
  background: #fff;
  border: 1px solid #dee2e6;
  border-radius: .25rem;
  scrollbar-gutter: stable;
}

/* ===== table settings ===== */
.table-fix-cols {
  border-collapse: collapse;
  table-layout: auto;
  width: max-content;
  display: table; /* keep table layout */
  font-size: 0.9rem;
}

.table-fix-cols th,
.table-fix-cols td {
  white-space: nowrap;
  border: 1px solid #dee2e6;
  padding: 4px 4px;
  background: #fff;
  vertical-align: middle;
}

/* first column width */
.table-fix-cols th:first-child,
.table-fix-cols td:first-child {
  width: 72px;
  min-width: 72px;
}

/* display label column width */
.table-fix-cols th:nth-child(3),
.table-fix-cols td:nth-child(3) {
  width: 150px;
  min-width: 150px;
}
.table-fix-cols td:nth-child(3) input[data-field="DisplayLabel"] {
  font-size: 0.85rem;
  padding: 2px 6px;
}

/* ===== sticky header ===== */
.table-fix-cols thead th {
  position: sticky;
  top: 0;
  z-index: 30;
  background: #f1f3f5;
  font-weight: 600;
  color: #003366;
  box-shadow: 0 2px 2px rgba(0,0,0,0.05);
}

/* ===== hover ===== */
.table-fix-cols tbody tr:hover td {
  background: #f8f9fc;
}

/* ===== header shadow ===== */
.table-fix-wrapper::after {
  content: "";
  position: sticky;
  top: 36px;
  left: 0;
  right: 0;
  height: 6px;
  background: linear-gradient(to bottom, rgba(0,0,0,0.1), transparent);
  pointer-events: none;
  z-index: 29;
}

.checkbox-dark {
  accent-color: #2c3e50;
  border: 1px solid #2c3e50 !important;
}
.lookup-money-th{
  min-width: 86px;
  white-space: nowrap;
}
.no-modal-drag{
  cursor: text !important;
  user-select: text;
}

</style>

<div class="modal fade" id="@modalId" tabindex="-1" aria-labelledby="dictModalLabel" aria-hidden="true" data-role="field-dict-modal">
  <div class="modal-dialog modal-xl modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title no-modal-drag" id="dictModalLabel">
          欄位說明
          <span id="dictTableNameDisplay" style="font-size: 0.85em; color: #6c757d; margin-left: 8px;"></span>
        </h5>
        <button type="button" class="btn btn-success ms-2"
                title="儲存變更並套用"
                onclick="saveAllDictFields('#@modalId .dictTableBody')">
        全部儲存
        </button>
        <button type="button" class="btn btn-outline-primary ms-2"
                title="依列/欄批次調整位置"
                onclick="applyGridLayoutByRowCol('#@modalId .dictTableBody')">
        列欄重排
        </button>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="關閉"></button>
      </div>

      <div class="modal-body">
        <div class="table-fix-wrapper">
          <table class="table-fix-cols" id="fieldDictTable">
            <thead>
              <tr>
                <th>序號</th>
                <th>欄位名稱</th>
                <th>顯示名稱</th>
                <th>唯讀</th>
                <th>可視</th>
                <th>勾選</th>
                <th>資料型態</th>
                <th>格式</th>
                <th>備註</th>
                <th>底色</th>
                <th>設定</th>
              </tr>
            </thead>

            <!-- 內容由 JS 生成，不用 Razor foreach -->
            <tbody class="dictTableBody" data-role="dict">
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Field detail modal -->
<div class="modal fade" id="fieldDetailModal" tabindex="-1" aria-labelledby="fieldDetailLabel" aria-hidden="true">
<div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title no-modal-drag" id="fieldDetailLabel">
          欄位詳細設定 - <span id="fieldDetailTitle" class="text-primary"></span>
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="關閉"></button>
      </div>

      <div class="modal-body">

        <div class="mb-2 small text-muted">可調整顯示位置與 Lookup 設定，套用後再按全部儲存一次送出。</div>


        <!-- Layout settings -->
        <h6 class="mt-2 mb-2">畫面設定</h6>
        <div class="table-responsive mb-3">
          <table class="table table-sm table-bordered text-center align-middle mb-0">
            <thead class="table-light">
              <tr>
                <th>Grid<br/></th>
                <th>顯示位置<br/></th>
                <th>列<br/></th>
                <th>欄<br/></th>
                <th>標籤Y<br/></th>
                <th>標籤X<br/></th>
                <th>標籤寬<br/></th>
                <th>標籤高<br/></th>
                <th>欄位Y<br/></th>
                <th>欄位X<br/></th>
                <th>欄位寬<br/></th>
                <th>欄位高<br/></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><input type="number" class="form-control form-control-sm" data-detail-field="DisplaySize" /></td>
                <td><input type="number" class="form-control form-control-sm" data-detail-field="iShowWhere" /></td>
                <td><input type="number" class="form-control form-control-sm" data-detail-field="iLayRow" /></td>
                <td><input type="number" class="form-control form-control-sm" data-detail-field="iLayColumn" /></td>
                <td><input type="number" class="form-control form-control-sm" data-detail-field="iLabTop" /></td>
                <td><input type="number" class="form-control form-control-sm" data-detail-field="iLabLeft" /></td>
                <td><input type="number" class="form-control form-control-sm" data-detail-field="iLabWidth" /></td>
                <td><input type="number" class="form-control form-control-sm" data-detail-field="iLabHeight" /></td>
                <td><input type="number" class="form-control form-control-sm" data-detail-field="iFieldTop" /></td>
                <td><input type="number" class="form-control form-control-sm" data-detail-field="iFieldLeft" /></td>
                <td><input type="number" class="form-control form-control-sm" data-detail-field="iFieldWidth" /></td>
                <td><input type="number" class="form-control form-control-sm" data-detail-field="iFieldHeight" /></td>
              </tr>
            </tbody>
          </table>
        </div>

        <!-- Lookup settings -->
        <h6 class="mt-3 mb-2">Lookup 下拉選單</h6>
        <div class="table-responsive">
          <table class="table table-sm table-bordered align-middle mb-0">
            <thead class="table-light">
              <tr>
                <th style="width:30%">查詢資料表<br/></th>
                <th style="width:30%">取值欄位<br/></th>
                <th style="width:30%">顯示欄位<br/></th>
                <th style="width:10%" class="text-center">備註欄位<br/></th>
                <th style="width:10%" class="text-center lookup-money-th">金額欄位<br/></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><input class="form-control form-control-sm" data-detail-field="LookupTable" /></td>
                <td><input class="form-control form-control-sm" data-detail-field="LookupKeyField" /></td>
                <td><input class="form-control form-control-sm" data-detail-field="LookupResultField" /></td>
                <td class="text-center">
                  <input type="checkbox" class="form-check-input" data-detail-field="IsNotesField" />
                </td>
                <td class="text-center">
                  <input type="checkbox" class="form-check-input" data-detail-field="IsMoneyField" />
                </td>
              </tr>
            </tbody>
          </table>
        </div>

        <h6 class="mt-3 mb-2">Lookup 篩選條件</h6>
        <div class="table-responsive">
          <table class="table table-sm table-bordered align-middle mb-0">
            <thead class="table-light">
              <tr>
                <th style="width:25%">條件欄位 1（查詢表）<br/></th>
                <th style="width:25%">條件欄位 1（本表）<br/></th>
                <th style="width:25%">條件欄位 2（查詢表）<br/></th>
                <th style="width:25%">條件欄位 2（本表）<br/></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><input class="form-control form-control-sm" data-detail-field="LookupCond1Field" /></td>
                <td><input class="form-control form-control-sm" data-detail-field="LookupCond1ResultField" /></td>
                <td><input class="form-control form-control-sm" data-detail-field="LookupCond2Field" /></td>
                <td><input class="form-control form-control-sm" data-detail-field="LookupCond2ResultField" /></td>
              </tr>
            </tbody>
          </table>
        </div>

        <h6 class="mt-4">非實體欄位 Lookup 設定</h6>
        <div class="row g-2">
            <div class="col-3">
                <label class="form-label mb-1">OCX 表格</label>
                <input id="fdm_ocxTable"
                      class="form-control form-control-sm"
                      data-detail-field="OCXLKTableName" />
            </div>
            <div class="col-3">
                <label class="form-label mb-1">OCX 顯示欄位</label>
                <input id="fdm_ocxResult"
                      class="form-control form-control-sm"
                      data-detail-field="OCXLKResultName" />
            </div>
        </div>

        <div class="mt-3">
          <div class="d-flex align-items-center justify-content-between mb-1">
            <div class="fw-semibold">Key 對應</div>
            <button type="button" class="btn btn-outline-secondary btn-sm" id="fdm_addKeyMap">＋新增</button>
          </div>
          <div class="table-responsive">
            <table class="table table-sm table-bordered align-middle mb-0" id="fdm_keyMapTable">
              <thead class="table-light">
                <tr>
                  <th style="width:45%">Table Key 欄位</th>
                  <th style="width:45%">被 Look up 的 Key 欄位</th>
                  <th style="width:10%" class="text-center">刪除</th>
                </tr>
              </thead>
              <tbody></tbody>
            </table>
          </div>
          <div class="small text-muted mt-1">可設定多組 Key 對應，避免複合 Key 欄位重複顯示。</div>

        </div>


      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">取消</button>
        <button type="button" class="btn btn-primary btn-sm" id="btnFieldDetailApply">套用</button>
      </div>
    </div>
  </div>
</div>

<style>
#fieldDictModal.modal.show,
#fieldDetailModal.modal.show{
  align-items: flex-start;
  padding-top: 72px;
  padding-bottom: 24px;
}
#fieldDictModal .modal-dialog,
#fieldDetailModal .modal-dialog{
  margin: 0 auto;
}
#fieldDictModal .modal-dialog,
#fieldDetailModal .modal-dialog{
  max-width: 90vw;
}
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    if (!window._dictTableName) {
      const host = document.querySelector('[data-dict-table]');
      if (host?.dataset?.dictTable) window._dictTableName = host.dataset.dictTable;
    }
    const modalEl = document.getElementById('fieldDictModal');
    if (modalEl) {
      modalEl.addEventListener('shown.bs.modal', () => {
        const tname = window._dictTableName || '';
        if (tname && window.initFieldDictModal) window.initFieldDictModal(tname, 'fieldDictModal');
      });
    }
  });
</script>





