          headerDefault = getDefaultFromTableKind(tableKind, paramValue);
        }
        if (controlType === 1) {
          const select = document.createElement("select");
          select.className = "form-select form-select-sm ps-control";
          select.setAttribute("data-param", name);
          const emptyOpt = document.createElement("option");
          emptyOpt.value = "";
          emptyOpt.textContent = "";
          emptyOpt.setAttribute("data-empty", "1");
          select.appendChild(emptyOpt);
          wrap.appendChild(select);
          const applySelectOptions = (options) => {
            select.querySelectorAll("option:not([data-empty])").forEach(o => o.remove());
            if (Array.isArray(options)) {
              options.forEach(opt => {
                const o = document.createElement("option");
                const val = opt.value ?? opt.Value ?? "";
                const text = opt.text ?? opt.Text ?? "";
                o.value = val;
                o.textContent = text ? `${val} ${text}`.trim() : val;
                if (text && text !== val) o.title = text;
                select.appendChild(o);
              });
            }
          };
          const loadOptions = async () => {
            try {
              console.debug("paperSearch loadOptions", {
                itemId,
                buttonName,
                paramName: p.ParamName || p.paramName,
                superValue: getSuperValue(p)
              });
              const options = await loadParamOptions(itemId, buttonName, p.ParamName || p.paramName, getSuperValue(p));
              applySelectOptions(options);
              return true;
            } catch (err) {
              console.warn("load options failed", err);
              applySelectOptions([]);
              const errOpt = document.createElement("option");
              errOpt.value = "";
              errOpt.textContent = "讀取失敗";
              if (err && err.message) errOpt.title = err.message;
              errOpt.disabled = true;
              select.appendChild(errOpt);
              return false;
            }
          };
          await loadOptions();
          const defVal = headerDefault || (p.DefaultValue ?? p.defaultValue);
          if (defVal != null && defVal !== "") {
            const masked = applyEditMask(defVal, p.EditMask ?? p.editMask);
            if (masked !== "" && !Array.from(select.options).some(o => o.value === masked)) {
              const o = document.createElement("option");
              o.value = masked;
              o.textContent = masked;
              select.appendChild(o);
            }
            select.value = masked;
          }
          select.addEventListener("focus", () => {
            if (select.querySelectorAll("option").length <= 1) {
              loadOptions().catch(() => {});
            }
          });
          select.addEventListener("keydown", (ev) => {
            if (ev.key === "Delete" || ev.key === "Backspace") {
              select.value = "";
            }
          });
        } else {
          const input = document.createElement("input");
          input.className = "form-control form-control-sm ps-control";
          input.type = "text";
          input.setAttribute("data-param", name);
          const defVal = headerDefault || (p.DefaultValue ?? p.defaultValue);
          if (defVal != null && defVal !== "") {
            input.value = applyEditMask(defVal, p.EditMask ?? p.editMask);
          }
          const readOnly = Number(p.iReadOnly ?? p.IReadOnly ?? 0) === 1;
          if (readOnly) input.readOnly = true;
          wrap.appendChild(input);
        }

        grid.appendChild(wrap);
        }
      }

      const fetchWrap = document.createElement("div");
      fetchWrap.className = "ps-actions";
      const btn = document.createElement("button");
      btn.type = "button";
      btn.className = "btn btn-primary ps-fetch";
      btn.textContent = "資料重取";
      fetchWrap.appendChild(btn);
      formEl.appendChild(fetchWrap);
    };

    const setFetchLoading = (loading) => {
      const btn = formEl?.querySelector(".ps-fetch");
      if (!btn) return;
      if (loading) {
        btn.classList.add("is-loading");
        btn.setAttribute("aria-busy", "true");
        btn.innerHTML = '<span class="spin">↻</span>查詢中...';
      } else {
        btn.classList.remove("is-loading");
        btn.removeAttribute("aria-busy");
        btn.textContent = "資料重取";
      }
    };

