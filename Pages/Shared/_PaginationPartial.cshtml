@model PaginationViewModel

@if (Model.TotalPages > 1)
{
    <nav>
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                <a class="page-link" href="@(Model.GetPageUrl(Model.PageNumber - 1))">上一頁</a>
            </li>
            @{
                int start = Math.Max(1, Model.PageNumber - 2);
                int end = Math.Min(Model.TotalPages, Model.PageNumber + 2);

                if (start > 2)
                {
                    <li class="page-item"><a class="page-link" href="@(Model.GetPageUrl(1))">1</a></li>
                    <li class="page-item"><a class="page-link" href="@(Model.GetPageUrl(2))">2</a></li>
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
                else
                {
                    for (int i = 1; i < start; i++)
                    {
                        <li class="page-item"><a class="page-link" href="@(Model.GetPageUrl(i))">@i</a></li>
                    }
                }

                for (int i = start; i <= end; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" href="@(Model.GetPageUrl(i))">@i</a>
                    </li>
                }

                if (end < Model.TotalPages - 2)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                    <li class="page-item"><a class="page-link" href="@(Model.GetPageUrl(Model.TotalPages-1))">@((Model.TotalPages-1))</a></li>
                    <li class="page-item"><a class="page-link" href="@(Model.GetPageUrl(Model.TotalPages))">@Model.TotalPages</a></li>
                }
                else
                {
                    for (int i = end+1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item"><a class="page-link" href="@(Model.GetPageUrl(i))">@i</a></li>
                    }
                }
            }
            <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@(Model.GetPageUrl(Model.PageNumber + 1))">下一頁</a>
            </li>
        </ul>
    </nav>
}
