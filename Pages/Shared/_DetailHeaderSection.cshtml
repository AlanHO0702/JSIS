        <ul class="nav nav-tabs" id="headerTabs" role="tablist">
            @foreach (var tab in groupedTabs.Keys)
            {
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(tab == 1 ? "active" : "")"
                            id="tab-@tab-tab"
                            data-bs-toggle="tab"
                            data-bs-target="#tab-@tab"
                            type="button" role="tab">
                        åˆ†é  @tab
