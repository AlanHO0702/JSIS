    if (!sel.matches('.erp-header-form .lookup-dropdown')) return;
    if (sel.closest('.modal')) return;
    if (isEdit && sel.dataset.readonly !== '1') return;

    const locked = sel.dataset.lockedValue ?? '';
    if ((sel.value ?? '') !== locked) {
      sel.value = locked;
    }
    e.stopPropagation();
