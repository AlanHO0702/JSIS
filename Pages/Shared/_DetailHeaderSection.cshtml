    });

    const viewOnlyIds = ['btnSubSearch', 'btnSwitch', 'btnSubAddNew', 'btnPrint', 'btnPaperTrace', 'btnPaperLog', 'btnCancel', 'btnPrev', 'btnNext'];
    viewOnlyIds.forEach(id => {
      const el = document.getElementById(id);
