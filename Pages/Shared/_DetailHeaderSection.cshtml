    const editOnlyIds = ['btnSubDetailAdd', 'btnSubDetailDelete', 'btnSaveHeader', 'btnCancelChanges'];
    editOnlyIds.forEach(id => {
      const el = document.getElementById(id);
      if (!el) return;
      el.disabled = !editing;
