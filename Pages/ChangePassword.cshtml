@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "密碼變更";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        body.change-password-body {
            min-height: 100vh;
            background: linear-gradient(180deg, #f7f9fd 0%, #eef2f8 100%);
            font-family: "Noto Sans TC", "Microsoft JhengHei", sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 60px 16px 32px;
        }

        .password-container {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
        }

        .password-card {
            width: min(480px, 100%);
            background: #ffffff;
            border-radius: 20px;
            padding: 36px 40px;
            border: 1px solid rgba(13, 52, 102, .08);
            box-shadow: 0 16px 40px rgba(15, 38, 70, .14);
            position: relative;
        }

        .password-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 6px;
            background: linear-gradient(90deg, #1f5fa9, #27b0aa);
            border-radius: 20px 20px 0 0;
        }

        .password-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .password-logo {
            width: 120px;
            height: auto;
            display: block;
            margin: 0 auto 16px;
        }

        .password-title {
            color: #1f5fa9;
            font-weight: 800;
            font-size: 2rem;
            letter-spacing: 4px;
            margin-bottom: 8px;
        }

        .password-subtitle {
            color: #5d6b82;
            font-size: 1rem;
            letter-spacing: 1px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            color: #2a3c5f;
            font-weight: 700;
            margin-bottom: 8px;
            letter-spacing: 1px;
            font-size: 14px;
        }

        .form-control-group {
            position: relative;
        }

        .form-control-group .bi-key,
        .form-control-group .bi-shield-lock,
        .form-control-group .bi-shield-check {
            position: absolute;
            left: 14px;
            top: 50%;
            transform: translateY(-50%);
            color: #9bb3d1;
            font-size: 1.2rem;
            transition: color .18s;
            pointer-events: none;
        }

        .form-control-group .toggle-password {
            position: absolute;
            right: 14px;
            top: 50%;
            transform: translateY(-50%);
            color: #9bb3d1;
            font-size: 1.2rem;
            cursor: pointer;
            transition: color .18s;
            z-index: 10;
            font-family: "bootstrap-icons" !important;
        }

        .form-control-group .toggle-password:hover {
            color: #2e8ad8;
        }

        /* 強制隱藏可能的重複圖示 */
        .form-control-group .toggle-password::after {
            display: none !important;
            content: none !important;
        }

        /* 確保只顯示 ::before 偽元素 */
        .form-control-group .toggle-password::before {
            display: inline-block !important;
        }

        .form-control {
            padding-left: 2.5rem;
            padding-right: 2.8rem;
            border-radius: 12px;
            border: 1.5px solid #dbe3f2;
            background: #f7f9fd;
            height: 48px;
            font-size: 1rem;
            color: #0f1f3a;
            transition: border-color .18s, box-shadow .18s, background .18s;
        }

        .form-control:focus {
            border-color: #2e8ad8;
            box-shadow: 0 0 0 3px rgba(46, 138, 216, .18);
            background: #ffffff;
        }

        .form-control-group:focus-within .bi-key,
        .form-control-group:focus-within .bi-shield-lock,
        .form-control-group:focus-within .bi-shield-check {
            color: #2e8ad8;
        }

        .form-control[readonly] {
            background: #eef2f7;
            cursor: not-allowed;
        }

        /* 隱藏瀏覽器內建的密碼顯示控制 */
        input[type="password"]::-ms-reveal,
        input[type="password"]::-ms-clear {
            display: none !important;
        }

        input[type="text"]::-ms-reveal,
        input[type="text"]::-ms-clear {
            display: none !important;
        }

        /* Chrome/Edge/Safari 的自動填充按鈕 */
        input::-webkit-credentials-auto-fill-button,
        input::-webkit-caps-lock-indicator,
        input::-webkit-contacts-auto-fill-button {
            display: none !important;
        }

        /* Chrome 的密碼顯示按鈕 */
        input[type="password"]::-webkit-textfield-decoration-container {
            display: none !important;
        }

        .btn-group {
            display: flex;
            gap: 12px;
            margin-top: 30px;
        }

        .btn-primary-custom {
            flex: 1;
            background: linear-gradient(120deg, #1f66b2 0%, #2eb0da 100%);
            color: #fff;
            font-weight: 700;
            font-size: 1.05rem;
            border-radius: 12px;
            border: none;
            box-shadow: 0 14px 28px rgba(31, 102, 178, .25);
            letter-spacing: 2px;
            transition: transform .16s, box-shadow .16s, filter .16s;
            padding: 12px 0;
        }

        .btn-primary-custom:hover {
            transform: translateY(-1px);
            box-shadow: 0 18px 34px rgba(31, 102, 178, .35);
            filter: saturate(1.05);
        }

        .btn-secondary-custom {
            flex: 1;
            background: #f3f4f6;
            color: #5d6b82;
            font-weight: 700;
            font-size: 1.05rem;
            border-radius: 12px;
            border: 1px solid #dbe3f2;
            letter-spacing: 2px;
            transition: background .16s, color .16s;
            padding: 12px 0;
        }

        .btn-secondary-custom:hover {
            background: #e5e7eb;
            color: #2a3c5f;
        }

        .alert {
            border-radius: 12px;
            margin-bottom: 20px;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 12px 16px;
            background: #f7f9fd;
            border: 1.5px solid #dbe3f2;
            border-radius: 12px;
            color: #2a3c5f;
            font-weight: 600;
            margin-bottom: 24px;
        }

        .user-info .bi {
            color: #2e8ad8;
            font-size: 1.2rem;
        }
    </style>
</head>
<body class="change-password-body">
    <div class="password-container">
        <div class="password-card">
            <div class="password-header">
                <img class="password-logo" src="/images/LOGO.jpg" alt="JSIS" />
                <div class="password-title">密碼變更</div>
                <div class="password-subtitle">Password Change</div>
            </div>

            <form id="changePasswordForm" method="post">
            <div class="form-group">
                <label class="form-label">登入帳號</label>
                <div class="user-info">
                    <i class="bi bi-person-circle"></i>
                    <span id="userIdDisplay">載入中...</span>
                </div>
            </div>

            <div class="form-group">
                <label for="OldPassword" class="form-label">原安全密碼</label>
                <div class="form-control-group">
                    <i class="bi bi-key"></i>
                    <input asp-for="OldPassword" type="password" class="form-control" id="OldPassword" placeholder="請輸入原密碼" required />
                    <i class="toggle-password bi-eye" onclick="togglePassword('OldPassword', this)" title="顯示/隱藏密碼"></i>
                </div>
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="NewPassword" class="form-label">新安全密碼</label>
                <div class="form-control-group">
                    <i class="bi bi-shield-lock"></i>
                    <input asp-for="NewPassword" type="password" class="form-control" id="NewPassword" placeholder="請輸入新密碼" required />
                    <i class="toggle-password bi-eye" onclick="togglePassword('NewPassword', this)" title="顯示/隱藏密碼"></i>
                </div>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ConfirmPassword" class="form-label">新安全密碼確認</label>
                <div class="form-control-group">
                    <i class="bi bi-shield-check"></i>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" id="ConfirmPassword" placeholder="請再次輸入新密碼" required />
                    <i class="toggle-password bi-eye" onclick="togglePassword('ConfirmPassword', this)" title="顯示/隱藏密碼"></i>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="btn-group">
                <button type="submit" class="btn-primary-custom">
                    <i class="bi bi-check-circle me-2"></i>確定
                </button>
                <button type="button" class="btn-secondary-custom" onclick="cancelChange()">
                    <i class="bi bi-x-circle me-2"></i>取消
                </button>
            </div>

            @Html.AntiForgeryToken()
        </form>
        </div>
    </div>

    <!-- Loading Overlay -->
    <div id="loadingOverlay" class="app-loading-overlay" aria-live="polite" aria-busy="true" style="display:none">
        <div class="box">
            <div class="spinner-border" role="status" aria-hidden="true"></div>
            <div class="msg" id="loadingMsg">處理中…</div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Loading overlay helpers
        (() => {
            const overlay = document.getElementById('loadingOverlay');
            const msgEl = document.getElementById('loadingMsg');
            let counter = 0, lastShowAt = 0;
            const MIN_SHOW = 150;

            function openOverlay(msg) {
                if (msgEl) msgEl.textContent = msg || '處理中…';
                overlay.classList.add('show');
                overlay.style.display = 'flex';
                lastShowAt = Date.now();
            }

            function closeOverlay() {
                const wait = Math.max(0, MIN_SHOW - (Date.now() - lastShowAt));
                setTimeout(() => {
                    overlay.classList.remove('show');
                    overlay.style.display = 'none';
                }, wait);
            }

            window.showBusy = (msg) => { if (++counter === 1) openOverlay(msg); };
            window.hideBusy = () => { if (counter > 0 && --counter === 0) closeOverlay(); };
        })();

        // 載入使用者資訊
        document.addEventListener('DOMContentLoaded', () => {
            const userId = localStorage.getItem('erpLoginUserId') || '未登入';
            const userIdDisplay = document.getElementById('userIdDisplay');
            if (userIdDisplay) {
                userIdDisplay.textContent = userId;
            }

            // 檢查後端回傳的錯誤或成功訊息
            const errorMsg = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.ErrorMessage ?? ""));
            const successMsg = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.SuccessMessage ?? ""));

            if (errorMsg) {
                if (window.Swal) {
                    Swal.fire({
                        icon: 'error',
                        title: '錯誤',
                        text: errorMsg
                    });
                } else {
                    alert(errorMsg);
                }
            } else if (successMsg) {
                if (window.Swal) {
                    Swal.fire({
                        icon: 'success',
                        title: '密碼變更完成',
                        text: '即將返回上一頁',
                        timer: 2000,
                        showConfirmButton: false
                    }).then(() => {
                        history.back();
                    });
                } else {
                    alert('密碼變更完成');
                    history.back();
                }
            }

            // 攔截表單提交,使用 fetch 發送請求
            const form = document.getElementById('changePasswordForm');
            if (form) {
                form.addEventListener('submit', async (e) => {
                    e.preventDefault();

                    const jwtId = localStorage.getItem('jwtId');
                    if (!jwtId) {
                        if (window.Swal) {
                            Swal.fire({
                                icon: 'error',
                                title: '登入已過期',
                                text: '請重新登入'
                            });
                        } else {
                            alert('登入已過期,請重新登入');
                        }
                        return;
                    }

                    const formData = new FormData(form);

                    showBusy('處理中...');

                    try {
                        // 取得防偽令牌
                        const token = form.querySelector('input[name="__RequestVerificationToken"]');

                        const response = await fetch(form.action || window.location.pathname, {
                            method: 'POST',
                            headers: {
                                'X-JWTID': jwtId,
                                'RequestVerificationToken': token ? token.value : ''
                            },
                            body: formData
                        });

                        hideBusy();

                        if (response.redirected) {
                            window.location.href = response.url;
                            return;
                        }

                        // 重新載入頁面以顯示後端的錯誤或成功訊息
                        window.location.reload();

                    } catch (error) {
                        hideBusy();
                        if (window.Swal) {
                            Swal.fire({
                                icon: 'error',
                                title: '錯誤',
                                text: '密碼變更失敗: ' + error.message
                            });
                        } else {
                            alert('密碼變更失敗: ' + error.message);
                        }
                    }
                });
            }
        });

        // 切換密碼顯示/隱藏
        function togglePassword(inputId, icon) {
            const input = document.getElementById(inputId);
            if (!input) return;

            if (input.type === 'password') {
                // 顯示密碼，眼睛加斜線
                input.type = 'text';
                icon.className = 'toggle-password bi-eye-slash';
            } else {
                // 隱藏密碼，正常眼睛
                input.type = 'password';
                icon.className = 'toggle-password bi-eye';
            }
        }

        // 取消按鈕
        function cancelChange() {
            if (window.Swal) {
                Swal.fire({
                    icon: 'question',
                    title: '確定要取消？',
                    text: '將返回上一頁',
                    showCancelButton: true,
                    confirmButtonText: '確定',
                    cancelButtonText: '取消'
                }).then(r => {
                    if (r.isConfirmed) {
                        history.back();
                    }
                });
            } else {
                if (confirm('確定要取消嗎？')) {
                    history.back();
                }
            }
        }
    </script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
