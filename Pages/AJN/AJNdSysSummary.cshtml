@page
@using WebRazor.Models
@model PcbErpApi.Pages.AJN.AJNdSysSummaryModel

@{
    ViewData["Title"] = Model.PageTitle;
    ViewData["DictTableName"] = Model.TableName;
    var config = ViewData["Config"] as MasterMultiDetailConfig;
    if (config == null)
    {
        <div class="alert alert-danger">配置錯誤：找不到 MasterMultiDetailConfig</div>
        return;
    }
}

<script>window._dictTableName = "@(ViewData["DictTableName"] ?? Model.TableName)";</script>

<!-- 套用 MasterMultiDetail 模板 -->
@await Html.PartialAsync("_MasterMultiDetailTemplate", config)
@await Html.PartialAsync("_FieldDictModal", Model.FieldDictList, ViewData)
<script src="~/js/fieldDictModal.js"></script>

<!-- ========== 覆蓋模板樣式，實現三層垂直堆疊佈局（對應 Delphi NTAKDLL）========== -->
<style>
/* ========== 隱藏模板的預設 Tab 介面 ========== */
#@config.DomId-tabs {
    display: none !important;
}

#@config.DomId-tabContent {
    display: none !important;
}

/* ========== 根容器：垂直堆疊佈局 ========== */
#@config.DomId {
    height: calc(100vh - 100px);
    display: flex;
    flex-direction: column;
    overflow: hidden;
}

/* ========== 按鈕列樣式 ========== */
#@config.DomId .btn-toolbar {
    margin-bottom: 10px;
    flex-shrink: 0;
}

/* ========== 三層垂直堆疊容器 ========== */
.sys-summary-layout {
    display: flex;
    flex-direction: column;
    height: 100%;
    overflow: hidden;
    border: 1px solid #ccc;
    background: #f5f5f5;
}

/* ========== 各區段面板 ========== */
.sys-summary-panel {
    display: flex;
    flex-direction: column;
    background: #fff;
    overflow: hidden;
}

/* Master 面板 - 固定高度 120px (對應 Delphi gridMaster1.Height) */
.sys-summary-master {
    height: 120px;
    min-height: 80px;
    flex-shrink: 0;
}

/* Detail 面板 - 固定高度 150px (對應 Delphi Page1_1.Height) */
.sys-summary-detail {
    height: 150px;
    min-height: 100px;
    flex-shrink: 0;
}

/* SubDetail 面板 - 填充剩余空间 (對應 Delphi PageSub Align=alClient) */
.sys-summary-subdetail {
    flex: 1; /* 填滿剩餘空間 */
    min-height: 100px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
}

/* 底部填充區域 */
.sys-summary-filler {
    flex: 0;
    min-height: 0;
    background: #f5f5f5;
}

/* ========== 分隔器樣式 (對應 Delphi Splitter) ========== */
.sys-summary-splitter {
    height: 4px;
    background: #d0d0d0;
    cursor: row-resize;
    flex-shrink: 0;
    position: relative;
}

.sys-summary-splitter:hover {
    background: #4a90e2;
}

.sys-summary-splitter::before {
    content: '';
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 40px;
    height: 2px;
    background: #999;
}

/* ========== 區段標題 ========== */
.sys-summary-header {
    background: linear-gradient(to bottom, #f0f0f0, #e0e0e0);
    border-bottom: 1px solid #ccc;
    padding: 4px 8px;
    font-weight: bold;
    font-size: 12px;
    color: #333;
    flex-shrink: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

/* ========== 區段內容 ========== */
.sys-summary-body {
    flex: 1;
    overflow: auto;
    background: #fff;
}

/* ========== 表格樣式（ERP風格）========== */
.mmd-wrapper .sys-summary-grid {
    width: 100%;
    border-collapse: collapse;
    table-layout: auto !important; /* 覆蓋模板的 fixed，讓欄位寬度自適應內容 */
    font-size: 12px;
}

.mmd-wrapper .sys-summary-grid thead {
    position: sticky;
    top: 0;
    z-index: 10;
}

.mmd-wrapper .sys-summary-grid th {
    background: linear-gradient(to bottom, #f8f8f8, #e8e8e8) !important;
    border: 0px solid #ccc !important;
    padding: 2px 6px !important; /* 增加 padding，讓標題有足夠空間 */
    font-weight: bold;
    text-align: left;
    white-space: nowrap; /* 標題不換行 */
    line-height: 1.2; /* 調整行高 */
    height: auto; /* 改為自動高度 */
}

.mmd-wrapper .sys-summary-grid td {
    border: 0px solid #e0e0e0 !important;
    padding: 2px 6px !important; /* 增加 padding，與表頭一致 */
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    line-height: 1.2; /* 調整行高 */
    height: auto; /* 改為自動高度 */
}

.mmd-wrapper .sys-summary-grid tbody tr {
    background: #fff;
}

.mmd-wrapper .sys-summary-grid tbody tr:nth-child(even) {
    background: #f9f9f9;
}

.mmd-wrapper .sys-summary-grid tbody tr:hover {
    background: #e8f4fd !important;
    cursor: pointer;
}

/* ⭐ 選中行的樣式 */
.mmd-wrapper .sys-summary-grid tbody tr.selected,
.mmd-wrapper .sys-summary-grid tbody tr.selected:nth-child(even) {
    background: #cce5ff !important;
    font-weight: bold;
}

.mmd-wrapper .sys-summary-grid tbody tr.selected td,
.mmd-wrapper .sys-summary-grid tbody tr.selected:nth-child(even) td {
    background: #cce5ff !important;
}

/* ========== 隱藏原模板的 Master 卡片 ========== */
.mmd-master-card {
    display: none !important;
}
</style>

<!-- ========== 自訂 JavaScript：改造模板為三層垂直堆疊佈局 ========== -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    const domId = '@config.DomId';
    const root = document.getElementById(domId);

    if (!root) {
        console.error('找不到根容器:', domId);
        return;
    }

    // 等待模板初始化完成後再改造佈局
    setTimeout(() => {
        // 建立三層垂直堆疊容器HTML
        const layoutHTML = `
            <div class="sys-summary-layout">
                <!-- 層級 1：系統作業 (Master) -->
                <div class="sys-summary-panel sys-summary-master">
                    <div class="sys-summary-header">
                        <span>系統作業</span>
                        <span id="countMaster">0 / 0</span>
                    </div>
                    <div class="sys-summary-body" id="master-container"></div>
                </div>

                <!-- 分隔器 1 (對應 Delphi Splitter1_1) -->
                <div class="sys-summary-splitter" data-target="master"></div>

                <!-- 層級 2：摘要規則 (Detail1) -->
                <div class="sys-summary-panel sys-summary-detail">
                    <div class="sys-summary-header">
                        <span>摘要規則</span>
                        <span id="countDetail0">0 / 0</span>
                    </div>
                    <div class="sys-summary-body" id="detail0-container"></div>
                </div>

                <!-- 分隔器 2 (對應 Delphi Splitter1) -->
                <div class="sys-summary-splitter" data-target="detail"></div>

                <!-- 層級 3：摘要對應科目 (SubDetail1) -->
                <div class="sys-summary-panel sys-summary-subdetail">
                    <div class="sys-summary-header">
                        <span>摘要對應科目</span>
                        <span id="countDetail1">0 / 0</span>
                    </div>
                    <div class="sys-summary-body" id="detail1-container"></div>
                </div>

                <!-- 分隔器 3 (SubDetail 底部拖曳器) -->
                <div class="sys-summary-splitter" data-target="subdetail"></div>

                <!-- 底部填充區域 -->
                <div class="sys-summary-filler"></div>
            </div>
        `;

        // 尋找按鈕列
        const btnToolbar = root.querySelector('.btn-toolbar');

        // 在按鈕列後插入三層垂直佈局
        if (btnToolbar && btnToolbar.parentElement && btnToolbar.parentElement.parentElement) {
            const container = btnToolbar.parentElement.parentElement;
            const layoutDiv = document.createElement('div');
            layoutDiv.innerHTML = layoutHTML;
            container.appendChild(layoutDiv.firstElementChild);
        }

        // ========== 移動模板生成的表格到對應位置 ==========

        // 1. Master 表格
        const masterWrapper = root.querySelector(`#${domId}-masterWrapper`);
        const masterTable = root.querySelector(`#${domId}-masterGrid`);
        if (masterWrapper && masterTable) {
            const masterContainer = document.getElementById('master-container');
            if (masterContainer) {
                masterContainer.appendChild(masterTable);
                masterTable.classList.add('sys-summary-grid');

                // 更新計數
                updateGridCount(masterTable, 'countMaster');

                // 監聽表格變化
                const observer = new MutationObserver(() => {
                    updateGridCount(masterTable, 'countMaster');
                });
                observer.observe(masterTable.querySelector('tbody'), {
                    childList: true,
                    subtree: true
                });
            }
        }

        // 2. 移動明細表格 (Detail0 和 Detail1)
        const detailContainers = ['detail0-container', 'detail1-container'];
        const countIds = ['countDetail0', 'countDetail1'];

        for (let i = 0; i < 2; i++) {
            const detailWrapper = root.querySelector(`#${domId}-detail-${i}-wrapper`);
            const detailTable = root.querySelector(`#${domId}-detail-${i}-grid`);
            if (detailWrapper && detailTable) {
                const container = document.getElementById(detailContainers[i]);
                if (container) {
                    container.appendChild(detailTable);
                    detailTable.classList.add('sys-summary-grid');

                    // 綁定計數更新
                    updateGridCount(detailTable, countIds[i]);

                    // 監聽表格變化
                    const observer = new MutationObserver(() => {
                        updateGridCount(detailTable, countIds[i]);
                    });
                    observer.observe(detailTable.querySelector('tbody'), {
                        childList: true,
                        subtree: true
                    });
                }
            }
        }

        // 綁定分隔器拖曳功能
        bindSplitters();
    }, 500);
});

// ========== 更新表格計數 (對應 Delphi qrySubDetail1AfterScroll) ==========
function updateGridCount(table, countId) {
    const tbody = table.querySelector('tbody');
    if (tbody) {
        const rows = tbody.querySelectorAll('tr');
        let count = 0;
        let selectedIndex = 0;

        rows.forEach((row, index) => {
            // 排除提示訊息行
            if (!row.textContent.includes('請點選') && !row.textContent.includes('載入中')) {
                count++;
                if (row.classList.contains('selected')) {
                    selectedIndex = count;
                }
            }
        });

        const countElem = document.getElementById(countId);
        if (countElem) {
            // 顯示格式: "當前行 / 總行數" (對應 Delphi pnl_CountDtl.Caption)
            countElem.textContent = `${selectedIndex > 0 ? selectedIndex : count} / ${count}`;
        }
    }
}

// ========== 綁定分隔器拖曳 (對應 Delphi Splitter) ==========
function bindSplitters() {
    const splitters = document.querySelectorAll('.sys-summary-splitter');

    splitters.forEach((splitter, index) => {
        splitter.addEventListener('mousedown', function(e) {
            e.preventDefault();

            const startY = e.clientY;
            const prevPanel = splitter.previousElementSibling;
            const nextPanel = splitter.nextElementSibling;
            const startHeight = prevPanel.offsetHeight;
            const startNextHeight = nextPanel ? nextPanel.offsetHeight : 0;

            // 檢查是否為最後一個分隔器（SubDetail 底部的拖曳器）
            const isLastSplitter = index === splitters.length - 1;

            // 如果是最後一個分隔器，將 SubDetail 改為固定高度模式
            if (isLastSplitter && prevPanel.classList.contains('sys-summary-subdetail')) {
                prevPanel.style.flex = 'none';
                prevPanel.style.height = startHeight + 'px';
                if (nextPanel) {
                    nextPanel.style.flex = '1';
                }
            }

            function onMouseMove(e) {
                const deltaY = e.clientY - startY;
                const newHeight = startHeight + deltaY;
                const newNextHeight = startNextHeight - deltaY;

                // 最小高度限制
                const minHeight = isLastSplitter ? 100 : 60;

                if (newHeight > minHeight) {
                    prevPanel.style.height = newHeight + 'px';

                    // 如果不是最後一個分隔器，需要同時調整下一個面板
                    if (!isLastSplitter && nextPanel) {
                        if (newNextHeight > minHeight) {
                            nextPanel.style.height = newNextHeight + 'px';
                        }
                    }
                    // 如果是最後一個分隔器，填充區域會自動使用 flex: 1 填滿剩餘空間
                }
            }

            function onMouseUp() {
                document.removeEventListener('mousemove', onMouseMove);
                document.removeEventListener('mouseup', onMouseUp);
            }

            document.addEventListener('mousemove', onMouseMove);
            document.addEventListener('mouseup', onMouseUp);
        });
    });
}

// ========== 監聽選中行變化，更新計數顯示 ==========
document.addEventListener('click', function(e) {
    const tr = e.target.closest('tr');
    if (tr && tr.parentElement.tagName === 'TBODY') {
        const table = tr.closest('table');
        if (table && table.classList.contains('sys-summary-grid')) {
            // 找到對應的計數器ID
            let countId = '';
            if (table.closest('#master-container')) {
                countId = 'countMaster';
            } else if (table.closest('#detail0-container')) {
                countId = 'countDetail0';
            } else if (table.closest('#detail1-container')) {
                countId = 'countDetail1';
            }

            if (countId) {
                setTimeout(() => updateGridCount(table, countId), 100);
            }
        }
    }
});
</script>