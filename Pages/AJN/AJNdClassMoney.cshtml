@page
@model AJNdClassMoneyModel
@{
    ViewData["TableTitle"] = "幣別匯率主檔";
    ViewData["AddApiUrl"] = "/api/AJN/AJNdClassMoney";
    ViewData["DictTableName"] = Model.ExchangeRates;
    var selectedCode = Model.SelectedMoneyCode;
}

<style>
    body { 
        font-size: 13px; 
        font-family: "Microsoft JhengHei", Arial, sans-serif;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
        padding: 20px;
    }

    /* ✅ 主容器：非滿版 */
    .currency-wrapper {
        max-width: 1000px;
        margin: 0 auto;
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    /* ✅ 頂部標題區 */
    .page-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 10px;
        text-align: center;
    }

    .page-header h1 {
        font-size: 28px;
        font-weight: bold;
        margin: 0;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
    }

    /* 內容區域 */
    .currency-content {
        padding: 24px;
    }

    .currency-main-section { 
        margin-bottom: 24px; 
        background-color: #fff; 
        border-radius: 6px; 
        border: 1px solid #e0e0e0; 
        overflow: hidden;
    }

    .currency-main-title { 
        background-color: #f8f9fa; 
        padding: 12px 16px; 
        font-weight: bold; 
        font-size: 16px; 
        color: #333;
    }

    .currency-table { 
        width: 100%; 
        border-collapse: collapse; 
        margin: 0; 
        table-layout: auto; 
        font-size: 12px; 
    }

    .currency-table thead { 
        background-color: #e3f2fd; 
    }

    .currency-table th { 
        border: 1px solid #dee2e6; 
        padding: 10px 8px; 
        text-align: center; 
        font-weight: bold; 
        font-size: 12px; 
        color: #333;
    }

    .currency-table td { 
        border: 1px solid #dee2e6; 
        padding: 10px 8px; 
        text-align: center; 
        font-size: 12px; 
    }

    .currency-table tbody tr { 
        background-color: white; 
        cursor: pointer; 
        transition: all 0.3s ease;
    }

    .currency-table tbody tr:hover { 
        background-color: #e3f2fd; 
    }

    .currency-table tbody tr.selected { 
        background-color: #bbdefb !important; 
        font-weight: bold;
        box-shadow: inset 0 0 8px rgba(102, 126, 234, 0.3);
    }

    .text-right { 
        text-align: right !important; 
        padding-right: 12px;
    }

    .row-number { 
        width: 50px; 
        background-color: #f5f5f5; 
        font-weight: bold;
    }

    .currency-history-section { 
        background-color: #fff; 
        border-radius: 6px; 
        border: 1px solid #e0e0e0; 
        overflow: hidden;
    }

    .currency-history-title { 
        background-color: #f0f4f8; 
        padding: 12px 16px; 
        font-weight: bold; 
        font-size: 14px; 
        color: #333;
    }

    .history-table-container {
        max-height: 350px;
        overflow-y: auto;
        border-top: 1px solid #dee2e6;
    }

    .history-table { 
        width: 100%; 
        border-collapse: collapse; 
        margin: 0; 
        table-layout: auto; 
        font-size: 12px; 
    }

    .history-table thead { 
        background-color: #e9ecef; 
    }

    .history-table th { 
        position: sticky;
        top: 0;
        border: 1px solid #dee2e6; 
        padding: 10px 8px; 
        text-align: center; 
        font-weight: bold; 
        font-size: 12px; 
        color: #333;
        background-color: #e9ecef;
        z-index: 10;
    }

    .history-table td { 
        border: 1px solid #dee2e6; 
        padding: 10px 8px; 
        text-align: center; 
        font-size: 12px; 
    }

    .history-table tbody tr { 
        background-color: white; 
    }

    .history-table tbody tr:hover { 
        background-color: #f8f9fa; 
    }

    .history-table tbody tr:first-child { 
        background-color: #cce5ff; 
    }

    /* 滾動條美化 */
    .history-table-container::-webkit-scrollbar {
        width: 8px;
    }

    .history-table-container::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    .history-table-container::-webkit-scrollbar-thumb {
        background: #667eea;
        border-radius: 4px;
    }

    .history-table-container::-webkit-scrollbar-thumb:hover {
        background: #764ba2;
    }

    /* 響應式 */
    @@media (max-width: 768px) {
        .currency-wrapper {
            max-width: 100%;
        }

        .page-header h1 {
            font-size: 20px;
        }

        .currency-content {
            padding: 16px;
        }
    }
</style>

<div class="currency-wrapper">
    <div class="page-header">
        <h1>幣別匯率主檔</h1>
    </div>

    <div class="currency-content">
        <!-- 第一階段：幣別匯率設定 -->
        <div class="currency-main-section">
            <div class="currency-main-title">幣別匯率設定</div>
            <table class="currency-table">
                <thead>
                    <tr>
                        <th style="width: 8%;">項次</th>
                        <th style="width: 18%;">幣別名稱</th>
                        <th style="width: 18%;">英文名稱</th>
                        <th style="width: 18%;">匯率</th>
                        <th style="width: 19%;">幣別科目</th>
                        <th style="width: 19%;">幣別子科目</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int rowIndex = 1; }
                    @foreach (var item in Model.ExchangeRates)
                    {
                        var isSelected = item.MoneyCode == selectedCode;
                        var rowClass = isSelected ? "selected" : "";
                        <tr class="@rowClass currency-row" data-money-code="@item.MoneyCode" onclick="selectCurrency('@item.MoneyCode')">
                            <td class="row-number">@rowIndex</td>
                            <td>@item.MoneyName</td>
                            <td>@item.EnglishName</td>
                            <td class="text-right">@(item.RateToNT?.ToString("N3") ?? "")</td>
                            <td>@item.MoneyAccId</td>
                            <td>@item.MoneySubAccId</td>
                        </tr>
                        rowIndex++;
                    }
                </tbody>
            </table>
        </div>

        <!-- 第二階段：幣別匯率歷史 -->
        <div class="currency-history-section">
            <div class="currency-history-title">幣別匯率設定(日期)</div>
        <!-- ✅ 包一層 div -->
            <div class="history-table-container">
                <table class="history-table">
                    <thead>
                        <tr>
                            <th style="width: 25%;">生效日</th>
                            <th style="width: 25%;">中間匯率</th>
                            <th style="width: 25%;">海關買進匯率</th>
                            <th style="width: 25%;">海關賣出匯率</th>
                        </tr>
                    </thead>
                    <tbody id="historyTableBody">
                        @if (Model.RateHistories != null && Model.RateHistories.Any())
                        {
                            @foreach (var rate in Model.RateHistories)
                            {
                                <tr>
                                    <td>@rate.RateDate.ToString("yyyy/MM/dd")</td>
                                    <td class="text-right">@(rate.RateToNT?.ToString("N3") ?? "-")</td>
                                    <td class="text-right">@(rate.RateToBuy?.ToString("N3") ?? "-")</td>
                                    <td class="text-right">@(rate.RateToSell?.ToString("N3") ?? "-")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="4" style="text-align:center;">請選擇上方幣別以查看歷史匯率</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    function selectCurrency(moneyCode) {
        // 先移除原本選取的樣式
        document.querySelectorAll('.currency-row').forEach(row => {
            row.classList.remove('selected');
        });

        // 加上目前點選的樣式
        const selectedRow = document.querySelector(`[data-money-code="${moneyCode}"]`);
        if (selectedRow) {
            selectedRow.classList.add('selected');
        }

        // 參數名稱要對應後端的 SelectedMoneyCode
        const currentUrl = new URL(window.location.href);
        currentUrl.searchParams.set("SelectedMoneyCode", moneyCode);
        window.location.href = currentUrl.toString();
    }
    
    document.addEventListener('DOMContentLoaded', function() {
        const selectedCode = '@selectedCode';
        if (selectedCode) {
            const selectedRow = document.querySelector(`[data-money-code="${selectedCode}"]`);
            if (selectedRow) {
                selectedRow.classList.add('selected');
                selectedRow.scrollIntoView({ behavior: 'smooth', block: 'center' });
            }
        }
    }); 
</script>