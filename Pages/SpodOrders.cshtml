@page 
@model SpodOrdersModel

<style>
    table td, table th {
        border: 1px solid #dee2e6 !important;
    }
    .title-row {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
    }
    .order-count {
        font-size: 1rem;
        color: #666;
        margin-bottom: 6px;
    }
</style>

<div class="container my-5">
    <div class="title-row mb-4 border-bottom pb-2">
        <h2 class="mb-0 text-primary">銷售訂單列表</h2>
        <span class="order-count">共 @Model.Orders.Count 筆</span>
    </div>

    <table class="table table-bordered table-hover align-middle text-center">
        <thead class="table-primary">
            <tr>
                <th scope="col">單據號碼</th>
                <th scope="col">日期</th>
                <th scope="col">客戶代碼</th>
                <th scope="col">客戶名稱</th>
                <th scope="col">客戶訂單號</th>
                <th scope="col">匯率</th>
                <th scope="col">訂單狀態</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders)
            {
                <tr>
                    <td>@order.PaperNum</td>
                    <td>@order.PaperDate.ToString("yyyy/MM/dd")</td>
                    <td>@order.CustomerId</td>
                    <td>@order.CustomerId</td> 
                    <td>@order.CustPonum</td>
                    <td>@order.RateToNt.ToString("F2")</td>
                    <td class="table-@Model.GetStatusColor(order.Finished)">
                        @Model.GetStatusName(order.Finished)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
