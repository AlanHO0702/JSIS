@page
@{
    ViewData["Title"] = "登入";
    Layout = null;
}
<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body {
            min-height: 100vh;
            background: #f0f4fa;
            font-family: 'Segoe UI', 'Noto Sans TC', Arial, sans-serif;
        }
        .login-glass {
            background: rgba(255,255,255,0.85);
            border-radius: 20px;
            box-shadow: 0 8px 40px 0 #2766b522, 0 2px 8px #0001;
            padding: 60px 70px 50px 70px;  /* 更大的padding */
            backdrop-filter: blur(4px);
            min-width: 450px;              /* 放大寬度 */
            min-height: 520px;             /* 放高 */
            max-width: 96vw;
        }
        .login-title {
            color: #2766b5;
            font-weight: 800;
            font-size: 2.3rem;
            letter-spacing: 3px;
        }
        .login-subtitle {
            color: #6a85b6;
            font-size: 1.09rem;
            margin-bottom: 34px;
            letter-spacing: 1px;
        }
        .login-label {
            color: #2766b5;
            font-weight: 600;
            font-size: 1.08rem;
            margin-bottom: 4px;
        }
        .login-input-group {
            position: relative;
            margin-bottom: 1.35rem;
        }
        .login-input-group .bi {
            position: absolute;
            left: 14px;
            top: 53%;
            transform: translateY(-50%);
            color: #b1c6e4;
            font-size: 1.24rem;
        }
        .login-input {
            padding-left: 2.2rem;
            border-radius: 9px;
            border: 1.5px solid #d2d9e6;
            background: #f5f8fd;
            height: 48px;
            font-size: 1.08rem;
            color: #24345a;
            transition: border-color 0.18s, box-shadow 0.18s;
        }
        .login-input:focus {
            border-color: #2766b5;
            box-shadow: 0 0 0 2px #2766b540;
            background: #f7fbff;
            color: #17467e;
        }
        .login-btn {
            background: linear-gradient(90deg, #2766b5 0%, #4198f7 100%);
            color: #fff;
            font-weight: bold;
            font-size: 1.13rem;
            border-radius: 9px;
            width: 100%;
            border: none;
            box-shadow: 0 3px 16px #2766b527;
            margin-top: 14px;
            transition: background 0.22s, box-shadow 0.14s;
        }
        .login-btn:hover {
            background: linear-gradient(90deg, #17467e 0%, #2766b5 100%);
            box-shadow: 0 6px 24px #2766b540;
        }
        #login-error {
            font-size: 1rem;
            padding: 0.7rem 1rem;
        }
        .login-footer {
            color: #9aa7bb;
            font-size: 0.96rem;
            margin-top: 24px;
            text-align: center;
        }
        .company-marquee {
        position: fixed;
        bottom: 0;
        width: 100%;
        max-width: 100vw;    /* 不會超過螢幕寬度 */
        background: #81a5d2;
        color: white;
        font-size: 0.95rem;
        padding: 0px 0;
        z-index: 999;
        text-align: center;
        font-weight: 500;
        letter-spacing: 1px;
        overflow: hidden;     /* 保證文字不會超出容器 */
    }

    </style>
</head>
<body>


        <img src="/images/jsis-watermark.svg"
            alt="JSIS"
            style="position:fixed;
                    left:50vw; top:48vh;
                    width:140vw; height:110vh;
                    transform:translate(-50%,-49%);
                    opacity:0.21;
                    z-index:0;
                    pointer-events:none;">

  
    <div class="container vh-100 d-flex align-items-center justify-content-center">
        <div class="login-glass mx-auto">
            <div class="text-center mb-4">
                <div class="login-title">系統登入</div>
                <div class="login-subtitle">請輸入帳號與密碼</div>
            </div>
            <div id="login-error" class="alert alert-danger d-none"></div>
            <form id="login-form" autocomplete="off">
                <div class="login-input-group">
                    <span class="bi bi-person"></span>
                    <input id="userid" class="form-control login-input" autocomplete="username" placeholder="帳號" />
                </div>
                <div class="login-input-group">
                    <span class="bi bi-lock"></span>
                    <input id="password" type="password" class="form-control login-input" autocomplete="current-password" placeholder="密碼" />
                </div>
                <button type="submit" class="login-btn">登入</button>
            </form>
            <div class="login-footer">
                &copy; 2025 JSIS INFORMATION SYS
            </div>
        </div>
    </div>

    <div id="loadingOverlay" style="display:none;position:fixed;top:0;left:0;width:100vw;height:100vh;z-index:9999;background:rgba(0,0,0,0.16);justify-content:center;align-items:center;">
        <div class="spinner-border text-primary" style="width:3.3rem;height:3.3reㄇm;"></div>
    </div>

<div class="company-marquee">
      <marquee behavior="scroll" direction="left" scrollamount="4"
           onmouseover="this.stop();" onmouseout="this.start();">
        傑偲資訊股份有限公司 &nbsp;&nbsp;&nbsp;&nbsp; 
        JS Information System &nbsp;&nbsp;&nbsp;&nbsp; 
        客服E-mail: <a href="mailto:james@jsis.com.tw">james@jsis.com.tw</a> &nbsp;&nbsp;&nbsp;&nbsp;
        官方網站: <a href="http://www.jsis.com.tw/" target="_blank">jsis.com.tw</a>
    </marquee>
</div>
<script>
document.addEventListener("DOMContentLoaded", function() {
    // 帳號自動帶出上次登入
    const lastUser = localStorage.getItem("erpLoginUserId");
    if (lastUser) document.getElementById("userid").value = lastUser;
    // 密碼預設空
    document.getElementById("password").value = "";

    document.getElementById("login-form").addEventListener("submit", async function (e) {
        e.preventDefault();
        const userid = document.getElementById("userid").value;
        const password = document.getElementById("password").value;
        localStorage.setItem("erpLoginUserId", userid);

        document.getElementById("loadingOverlay").style.display = "flex";
        const errDiv = document.getElementById('login-error');
        errDiv.classList.add("d-none");

        try {
            const resp = await fetch('/api/Login', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ userId: userid, password: password })
            });

            if (resp.ok) {
                window.location.href = "/FontIndex";
            } else {
                const result = await resp.json();
                errDiv.textContent = result.error || "登入失敗";
                errDiv.classList.remove("d-none");
            }
        } catch (ex) {
            errDiv.textContent = "網路或伺服器錯誤，請稍後再試";
            errDiv.classList.remove("d-none");
        } finally {
            document.getElementById("loadingOverlay").style.display = "none";
        }
    });
});

</script>
</body>
</html>
