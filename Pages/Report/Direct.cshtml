@page "/Report/Direct/{itemId}"
@model GenericReportPageModel
@{
    var itemId = (string?)RouteData.Values["itemId"] ?? string.Empty;
    var cfg = Model.BuildDirectConfigFromDb(itemId); // Fetch config from CURdSysItems/CURdAddonParams
    ViewData["Title"] = cfg.Title;
}
@await Html.PartialAsync("~/Pages/Shared/_ReportDirectPreview.cshtml", cfg)
