function _escSb(s) {
  return String(s == null ? '' : s)
    .replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;').replace(/"/g,'&quot;');
}
function _showNumSb(v) {
  return (v === undefined || v === null) ? '' : String(v).trim();
}

function _chkSb(v) { return (v === 1 || v === '1') ? ' checked' : ''; }

function _appendSysButtonRow(tbody, r){
  var tr = document.createElement('tr');
  tr.innerHTML =
    '<td><input class="form-control form-control-sm text-end" value="' + _showNumSb(r.serialNum) + '"></td>' +
    '<td><input class="form-control form-control-sm" value="' + _escSb(r.buttonName) + '" readonly style="background:#f5f5f5;"></td>' +
    '<td class="text-center"><input type="checkbox" class="form-check-input"' + _chkSb(r.bVisiable) + '></td>' +
    '<td><input class="form-control form-control-sm" value="' + _escSb(r.custCaption) + '"></td>' +
    '<td><input class="form-control form-control-sm" value="' + _escSb(r.custCaptionEN) + '"></td>' +
    '<td><input class="form-control form-control-sm" value="' + _escSb(r.custHint) + '"></td>' +
    '<td><input class="form-control form-control-sm" value="' + _escSb(r.custHintEN) + '"></td>' +
    '<td class="text-center"><input type="checkbox" class="form-check-input"' + _chkSb(r.bShowMsg) + '></td>' +
    '<td><input class="form-control form-control-sm" value="' + _escSb(r.sCustMsg) + '"></td>' +
    '<td class="text-center"><input type="checkbox" class="form-check-input"' + _chkSb(r.bShowMsgAft) + '></td>' +
    '<td><input class="form-control form-control-sm" value="' + _escSb(r.sCustMsgAft) + '"></td>';
  tr.dataset.itemId = r.itemId;
  tr.dataset.buttonName = r.buttonName;
  tbody.appendChild(tr);
}

function _bTo01Sb(v) { return (v===1||v==='1'||v===true||v==='true')?1:0; }
function _numOrNullSb(v) { var s=String(v==null?'':v).trim(); if(s==='') return null; var n=Number(s); return isFinite(n)?n:null; }

function _saveSysButtons(){
  var tbody = document.querySelector('#sysButtonTable tbody');
  var trs = Array.from(tbody.querySelectorAll('tr'));

  if(trs.length === 0 || (trs.length === 1 && trs[0].cells.length === 1)){
    alert('沒有資料可儲存');
    return;
  }

  var payload = [];
  for(var i=0; i<trs.length; i++){
    var tds = trs[i].querySelectorAll('td');
    if(tds.length < 11) continue;
    payload.push({
      ItemId:         selectedItemId,
      ButtonName:     trs[i].dataset.buttonName || tds[1].querySelector('input').value.trim(),
      SerialNum:      _numOrNullSb(tds[0].querySelector('input').value),
      bVisiable:      tds[2].querySelector('input').checked ? 1 : 0,
      CustCaption:    tds[3].querySelector('input').value,
      CustCaptionEN:  tds[4].querySelector('input').value,
      CustHint:       tds[5].querySelector('input').value,
      CustHintEN:     tds[6].querySelector('input').value,
      bShowMsg:       tds[7].querySelector('input').checked ? 1 : 0,
      sCustMsg:       tds[8].querySelector('input').value,
      bShowMsgAft:    tds[9].querySelector('input').checked ? 1 : 0,
      sCustMsgAft:    tds[10].querySelector('input').value,
      CustCaptionCN:  '', CustCaptionJP: '', CustCaptionTH: '',
      CustHintCN:     '', CustHintJP:    '', CustHintTH:    ''
    });
  }

  if(payload.length === 0){ alert('沒有有效資料可儲存'); return; }

  fetch('/api/DictSetupApi/SysButton/Save', {
    method:'POST',
    headers:{'Content-Type':'application/json'},
    body: JSON.stringify(payload)
  }).then(function(res){ return res.json(); })
    .then(function(data){
      if(data && data.success === true) alert('已儲存 ' + data.count + ' 筆系統按鈕設定');
      else alert('儲存失敗：' + (data && data.message || '未知錯誤'));
    })
    .catch(function(ex){ alert('儲存失敗：' + ex.message); });
}
</script>

