  const cacheKey = `${selectedItemId}::${row.buttonName}`;
  if (cbDetailCache.has(cacheKey)) {
    renderCustomBtnDetail(cbDetailCache.get(cacheKey));
    return;
  }

  const token = ++cbDetailRequestToken;
  try {
    const res = await fetch(`/api/CustomButtonApi/Detail/${encodeURIComponent(selectedItemId)}/${encodeURIComponent(row.buttonName)}`);
    if (!res.ok) throw new Error("查詢失敗");
    const dto = await res.json();
    if (token !== cbDetailRequestToken) return;
    cbDetailCache.set(cacheKey, dto);
    renderCustomBtnDetail(dto);
  } catch (ex) {
    if (token !== cbDetailRequestToken) return;
    renderCustomBtnDetail({ searchParams: [], insertKeys: [], callSpParams: [], tranParams: [] });
    alert(`載入按鈕明細失敗：${ex.message || ex}`);
