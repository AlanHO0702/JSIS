function activateMainTab(tab){
  const btns = Array.from(document.querySelectorAll("[data-cb-main-tab]"));
  const panes = Array.from(document.querySelectorAll("[data-cb-main-pane]"));
  btns.forEach(btn => {
    const isActive = btn.dataset.cbMainTab === tab && !btn.classList.contains("d-none");
    btn.classList.toggle("active", isActive);
  });
  panes.forEach(pane => {
    const paneTab = pane.dataset.cbMainPane;
    const tabBtn = document.querySelector(`[data-cb-main-tab="${paneTab}"]`);
    const isVisible = !!tabBtn && !tabBtn.classList.contains("d-none");
    const isActive = paneTab === tab && isVisible;
    pane.classList.toggle("d-none", !isActive);
  });
}

function activateTemplateTab(tab){
  const btns = Array.from(document.querySelectorAll("[data-cb-template-tab]"));
  const panes = Array.from(document.querySelectorAll("[data-cb-template-pane]"));
  btns.forEach(btn => {
    const isActive = btn.dataset.cbTemplateTab === tab && !btn.classList.contains("d-none");
    btn.classList.toggle("active", isActive);
    btn.classList.toggle("btn-primary", isActive);
    btn.classList.toggle("btn-outline-secondary", !isActive);
