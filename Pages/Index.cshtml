// 載入資料表的欄位設定
async function loadFieldSettings(tableNames, targetTable) {
  if (!Array.isArray(tableNames) || tableNames.length === 0) return;

  try {
    for (const tableName of tableNames) {
      if (!tableName) continue;
      const res = await fetch(`/api/DictSetupApi/FieldSettings/${encodeURIComponent(tableName)}`);
      if (!res.ok) continue;
      const fields = await res.json();

      // 建立欄位名稱到設定的對應
      const fieldMap = {};
      fields.forEach(f => {
        fieldMap[f.FieldName] = f;
      });

      if (targetTable === 'CURdOCXTableSetUp') {
        dictFieldSettings[tableName] = fieldMap;
      } else if (targetTable === 'CURdTableName') {
        tableNameFieldSettings[tableName] = fieldMap;
      }
    }
  } catch (ex) {
    console.error("載入欄位設定失敗：", ex);
  }
}

// 套用欄位設定到表格列（設定唯讀屬性）
function applyFieldSettingsToRow(tr, targetTable) {
  const fieldMap = targetTable === 'CURdOCXTableSetUp'
    ? dictFieldSettings['CURdOCXTableSetUp']
    : tableNameFieldSettings['CURdTableName'];

  if (!fieldMap) return;

  // 找到所有 input 和 textarea
  const inputs = tr.querySelectorAll('input, textarea');
  inputs.forEach(input => {
    const fieldName = input.dataset.field;
    if (!fieldName) return;

    const fieldSetting = fieldMap[fieldName];
    if (!fieldSetting) return;

    // 設定唯讀屬性（只有唯讀欄位才加灰底）
    if (fieldSetting.ReadOnly === 1) {
      input.readOnly = true;
      input.style.backgroundColor = '#f5f5f5';
      input.style.cursor = 'not-allowed';
    }
  });
}

