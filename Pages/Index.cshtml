async function ensureOcxTempleteOptions(selectedValue) {
  const select = document.getElementById('editOcxtemplete');
  if (!select) return;
  if (!_ocxTempleteCache) {
    try {
      const fetcher = window.busyFetch || fetch;
      const res = await fetcher("/api/EditItemApi/OcxTempleteOptions");
      _ocxTempleteCache = res.ok ? await res.json() : [];
    } catch {
      _ocxTempleteCache = [];
    }
  }
  select.innerHTML = "";
  const emptyOpt = document.createElement("option");
  emptyOpt.value = "";
  emptyOpt.textContent = "";
  select.appendChild(emptyOpt);
  _ocxTempleteCache.forEach(opt => {
    const o = document.createElement("option");
    o.value = opt.ocxTemplete || opt.OcxTemplete || opt.OCXTemplete || "";
    const name = opt.ocxTempleteName || opt.OcxTempleteName || opt.OCXTempleteName || "";
    o.textContent = name ? `${o.value} - ${name}` : o.value;
    select.appendChild(o);
  });
  select.value = selectedValue || "";
}

function bindValueTextOptions(select, list, selectedValue) {
  if (!select) return;
  const selected = selectedValue === null || selectedValue === undefined ? "" : String(selectedValue);
  const options = Array.isArray(list) ? list : [];

  select.innerHTML = "";
  const emptyOpt = document.createElement("option");
  emptyOpt.value = "";
  emptyOpt.textContent = "";
  select.appendChild(emptyOpt);

  const mapped = options
    .map(opt => {
      const value = opt?.value ?? opt?.Value ?? opt?.itemType ?? opt?.ItemType ?? opt?.outputType ?? opt?.OutputType;
      const text = opt?.text ?? opt?.Text ?? opt?.name ?? opt?.Name ?? "";
      return { value, text };
    })
    .filter(x => x.value !== null && x.value !== undefined && String(x.value).trim() !== "");

  mapped.forEach(x => {
    const valueStr = String(x.value).trim();
    const textStr = String(x.text ?? "").trim();
    const o = document.createElement("option");
    o.value = valueStr;
    o.textContent = textStr && textStr !== valueStr ? `${valueStr} - ${textStr}` : valueStr;
    select.appendChild(o);
  });

  if (selected && !mapped.some(x => String(x.value).trim() === selected)) {
    const fallback = document.createElement("option");
