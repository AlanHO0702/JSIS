function pick(obj, ...names) {
  for (const n of names) {
    if (obj && obj[n] !== undefined && obj[n] !== null) return obj[n];
  }
  return undefined;
}

async function toggleBtnDetail(btnEl){
  const tr = btnEl.closest('tr');
  const table = tr.closest('table');
  const btnName = tr.querySelectorAll('td')[2].querySelector('input').value.trim();
  const after = tr.nextElementSibling;

  if (after && after.classList.contains('cb-detail')) { after.remove(); return; }

  const detailTr = document.createElement('tr');
  detailTr.className = 'cb-detail';
  const colCount = table.tHead.querySelector('tr').cells.length; // 更穩定
  detailTr.innerHTML = `<td colspan="${colCount}"><div class="p-2 small text-muted">載入中…</div></td>`;
  tr.insertAdjacentElement('afterend', detailTr);

  try{
    const url = `/api/CustomButtonApi/Detail/${encodeURIComponent(selectedItemId)}/${encodeURIComponent(btnName)}`;
    const res = await fetch(url);
    if(!res.ok) throw new Error('查詢失敗');
    const dto = await res.json();

    // 兼容 PascalCase 與 camelCase
    const searchParams = pick(dto, 'searchParams', 'SearchParams') || [];
    const insertKeys   = pick(dto, 'insertKeys', 'InsertKeys') || [];

    let html = `<div class="p-2">`;

    if (searchParams.length){
      html += `
      <div class="mb-3">
        <div class="d-flex align-items-center mb-1"><strong>搜尋參數（${searchParams.length}）</strong></div>
        <div class="table-responsive">
          <table class="table table-bordered table-sm mb-0">
            <thead>
              <tr>
                <th>ParamSN</th><th>ParamName</th><th>DisplayName</th>
                <th>ControlType</th><th>CommandText</th>
                <th>DefaultValue</th><th>DefaultType</th><th>iReadOnly</th><th>iVisible</th>
              </tr>
            </thead>
            <tbody>
              ${searchParams.map(p => `
                <tr>
                  <td class="text-end">${pick(p,'paramSN','ParamSN') ?? ''}</td>
                  <td>${esc(pick(p,'paramName','ParamName') ?? '')}</td>
                  <td>${esc(pick(p,'displayName','DisplayName') ?? '')}</td>
                  <td class="text-end">${pick(p,'controlType','ControlType') ?? ''}</td>
                  <td class="text-break">${esc(pick(p,'commandText','CommandText') ?? '')}</td>
                  <td>${esc(pick(p,'defaultValue','DefaultValue') ?? '')}</td>
                  <td class="text-end">${pick(p,'defaultType','DefaultType') ?? ''}</td>
                  <td class="text-end">${pick(p,'iReadOnly','IReadOnly','ireadOnly') ?? ''}</td>
                  <td class="text-end">${pick(p,'iVisible','IVisible','ivisible') ?? ''}</td>
                </tr>`).join('')}
            </tbody>
          </table>
        </div>
      </div>`;
    }

    if (insertKeys.length){
      html += `
      <div>
        <div class="d-flex align-items-center mb-1"><strong>插入鍵（${insertKeys.length}）</strong></div>
        <div class="table-responsive">
          <table class="table table-bordered table-sm mb-0">
            <thead><tr><th>SeqNum</th><th>KeyFieldName</th><th>PositionType</th></tr></thead>
            <tbody>
              ${insertKeys.map(k => `
                <tr>
                  <td class="text-end">${pick(k,'seqNum','SeqNum') ?? ''}</td>
                  <td>${esc(pick(k,'keyFieldName','KeyFieldName') ?? '')}</td>
                  <td class="text-end">${pick(k,'positionType','PositionType') ?? ''}</td>
                </tr>`).join('')}
            </tbody>
          </table>
        </div>
      </div>`;
    }

    if (searchParams.length === 0 && insertKeys.length === 0) {
      html += `<div class="text-muted">（此按鈕沒有搜尋參數或插入鍵設定）</div>`;
    }

    html += `</div>`;
    detailTr.firstElementChild.innerHTML = html;
  }catch(ex){
    detailTr.firstElementChild.innerHTML = `<div class="text-danger">載入失敗：${esc(ex.message||ex)}</div>`;
  }
}

