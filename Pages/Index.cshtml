    tbody.innerHTML = '';

    if (!rows || rows.length === 0) {
      tbody.innerHTML = '<tr><td colspan="11" class="text-center text-muted">（無系統按鈕設定）</td></tr>';
    } else {
      rows.forEach(function(r) {
        _appendSysButtonRow(tbody, {
          itemId:         r.ItemId || selectedItemId,
          buttonName:     r.ButtonName || '',
          bVisiable:      r.bVisiable != null ? r.bVisiable : 1,
          custCaption:    r.CustCaption || '',
          custCaptionEN:  r.CustCaptionEN || '',
          custHint:       r.CustHint || '',
          custHintEN:     r.CustHintEN || '',
          bShowMsg:       r.bShowMsg || 0,
          sCustMsg:       r.sCustMsg || '',
          bShowMsgAft:    r.bShowMsgAft || 0,
