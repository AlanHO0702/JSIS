async function loadDictFieldLabelMap(tableName){
  const cacheKey = normFieldKey(tableName);
  if (cbDictLabelCache.has(cacheKey)) return cbDictLabelCache.get(cacheKey);

  const map = new Map();
  try {
    const url = `/api/TableFieldLayout/DictFields?table=${encodeURIComponent(tableName)}&lang=TW`;
    const res = await fetch(url);
    if (res.ok) {
      const rows = await res.json();
      (rows || []).forEach(r => {
        const field = normFieldKey(pick(r, "FieldName", "fieldName"));
        if (!field) return;
        const label = String(pick(r, "DisplayLabel", "displayLabel") ?? "").trim();
        if (label) map.set(field, label);
