function applyCustomBtnTabRules(row){
  const designType = numOrNull(row.designType) ?? 0;
  const searchTemplate = String(row.searchTemplate || "").trim().toLowerCase();
  const tranOn = (numOrNull(row.bTranByGlobalId) ?? 0) === 1;

  const mainVisible = { template: false, callsp: false, tran: false, print: false };
  if (designType === 0) {
    mainVisible.tran = tranOn;
  } else if (designType === 1 || designType === 2) {
    mainVisible.template = true;
    mainVisible.tran = tranOn;
  } else if (designType === 3) {
    mainVisible.callsp = true;
  } else if (designType === 4) {
    mainVisible.print = true;
  }

  setMainTabVisible("template", mainVisible.template);
  setMainTabVisible("callsp", mainVisible.callsp);
  setMainTabVisible("tran", mainVisible.tran);
  setMainTabVisible("print", mainVisible.print);

  const noDesignHint = document.getElementById("cbNoDesignHint");
  const hasMainVisible = Object.values(mainVisible).some(Boolean);
  if (noDesignHint) noDesignHint.classList.toggle("d-none", hasMainVisible);
  if (hasMainVisible) {
    ensureActiveMainTab();
  } else {
    document.querySelectorAll("[data-cb-main-pane]").forEach(p => p.classList.add("d-none"));
  }

  const templateSetVisible = { set1: false, set2: false, set3: false, set4: false };
  if (mainVisible.template) {
    if (searchTemplate === "jsdeditgriddll.dll") {
      templateSetVisible.set3 = true;
    } else if (searchTemplate === "jsdcondrunspdll.dll") {
      templateSetVisible.set1 = true;
    } else {
      templateSetVisible.set1 = true;
      templateSetVisible.set2 = true;
    }
    if (searchTemplate === "jsdpapersearchdll.dll") {
      templateSetVisible.set4 = true;
    }
  }

  setTemplateTabVisible("set1", templateSetVisible.set1);
  setTemplateTabVisible("set2", templateSetVisible.set2);
  setTemplateTabVisible("set3", templateSetVisible.set3);
  setTemplateTabVisible("set4", templateSetVisible.set4);
  const hasTemplateVisible = Object.values(templateSetVisible).some(Boolean);
  if (hasTemplateVisible) {
    ensureActiveTemplateTab();
  } else {
    document.querySelectorAll("[data-cb-template-pane]").forEach(p => p.classList.add("d-none"));
  }
}

