@page
@model PcbErpApi.Pages.IndexModel
@{
    var level0 = Model.Level0Items;
    var level1Map = Model.Level1Map;
    var level2List = Model.GetCurrentLevel2();
    var requestPath = ViewContext.HttpContext.Request.Path;
    var isPaperInfo = requestPath.StartsWithSegments("/PaperInfo");
    var isSysParams = requestPath.StartsWithSegments("/SysParams");
    var isDbConnectionSettings = requestPath.StartsWithSegments("/DbConnectionSettings");
    var isSystemSelectSettings = requestPath.StartsWithSegments("/SystemSelectSettings");
    var isTableDictionarySettings = requestPath.StartsWithSegments("/TableDictionarySettings");
    var isIndexPage = requestPath == "/" || requestPath.StartsWithSegments("/Index");
    var selectedLevel1Id = Model.SelectedLevel1Id ?? "";
    var sysCode = selectedLevel1Id.Length >= 3 ? selectedLevel1Id.Substring(0, 3) : "";
    Layout = "_Layout";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="index-global-tabs-wrap">
  <ul class="nav nav-pills index-global-nav">
    <li class="nav-item">
      <a class="nav-link @(isSysParams ? "active" : "") @(string.IsNullOrEmpty(sysCode) ? "disabled" : "")"
         href="@(string.IsNullOrEmpty(sysCode) ? "#" : $"/SysParams?SelectedSystem={sysCode}")"
         aria-disabled="@(string.IsNullOrEmpty(sysCode) ? "true" : "false")">
        系統參數設定
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link @(isPaperInfo ? "active" : "")" href="/PaperInfo">單據設定</a>
    </li>
    <li class="nav-item">
      <a class="nav-link @(isDbConnectionSettings ? "active" : "")" href="/DbConnectionSettings">資料庫連線設定</a>
    </li>
    <li class="nav-item">
      <a class="nav-link @(isSystemSelectSettings ? "active" : "")" href="/SystemSelectSettings">系統別設定</a>
    </li>
    <li class="nav-item">
      <a class="nav-link @(isTableDictionarySettings ? "active" : "")" href="/TableDictionarySettings">資料辭典</a>
    </li>
  </ul>
</div>

<div style="display:flex; gap:20px;" class="index-page">
  <!-- 左側模組 -->
  <div style="width:240px;" class="index-side">
    <h4>系統模組</h4>
    <ul class="index-tree" style="list-style:none; padding-left:0;">
      @foreach (var mod0 in level0)
      {
          var level1Id = $"level1-{mod0.ItemId}";
          var shouldExpand = level1Map.ContainsKey(mod0.ItemId) && level1Map[mod0.ItemId].Any(x => x.ItemId == Model.SelectedLevel1Id);
          <li>
            <a href="javascript:void(0)" onclick="toggleChildren('@level1Id', this)" style="font-weight:bold;" class="module-toggle" data-expanded="@(shouldExpand ? "true" : "false")">
              <i class="bi bi-folder2 module-icon"></i>
              <span class="module-name">@mod0.ItemName</span>
              <i class="bi @(shouldExpand ? "bi-chevron-down" : "bi-chevron-right") chevron-icon"></i>
            </a>
            @if (level1Map.ContainsKey(mod0.ItemId))
            {
              <ul id="@level1Id" style="display:@(shouldExpand ? "block" : "none"); margin-left:15px;">
                @foreach (var mod1 in level1Map[mod0.ItemId])
                {
                    var isActive = mod1.ItemId == Model.SelectedLevel1Id;
                    <li class="mb-1">
                      <a asp-page="/Index" asp-route-level1Id="@mod1.ItemId" class="@(isActive ? "active" : "")">
                        <i class="bi bi-dot sub-icon"></i>
                        @mod1.ItemName
                      </a>
                    </li>
                }
              </ul>
            }
          </li>
      }
    </ul>
  </div>

  <!-- 右側功能列表 -->
  <div style="width:700px;" class="index-main">
  <div class="index-headerbar">
    <div class="index-headerbar-row1">
      <ul class="nav nav-pills index-nav">
        <li class="nav-item">
          <button class="nav-link @(isIndexPage ? "active" : "")" type="button">
            功能項目維護
          </button>
        </li>
        <li class="nav-item">
          <a id="btnFunctionSetupTab"
             class="nav-link disabled"
             href="#"
             aria-disabled="true"
             onclick="return openFunctionSetupPage(event)">
            功能設定
          </a>
        </li>
      </ul>
      <button class="btn btn-primary btn-sm index-action-btn" onclick="openAddModal()" style="white-space:nowrap;">新增功能</button>
    </div>
  </div>
  @if (level2List.Any())
  {

    <ul id="level2-list" class="list-group index-list">
      @foreach (var item in level2List)
      {
        if (item.ItemType == 4)
        {
          <li class="list-group-item p-0" id="li-@item.ItemId"><hr class="m-0" /></li>
        }
        else
        {
          <li class="list-group-item selectable"
              id="li-@item.ItemId"
              data-item-id="@item.ItemId"
              onclick="selectItem('@item.ItemId')"
              ondblclick="openEditModal('@item.ItemId', '@item.ItemName', '@item.SuperId', '@item.SystemId', '@item.SerialNum', @((item.Enabled)), '@(System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(item.Notes ?? ""))', '@(System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(item.Ocxtemplete ?? ""))', '@(System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(item.SWebMenuId ?? ""))', '@(System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(item.SWebSuperMenuId ?? ""))', '@(item.IWebMenuOrderSeq?.ToString() ?? "")', '@(item.IWebMenuLevel?.ToString() ?? "")', '@(item.IWebEnable?.ToString() ?? "")', '@(item.ItemType)', '@(item.OutputType)', '@(System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(item.ObjectName ?? ""))')"
              style="cursor:pointer;">
              <div class="item-row">
                <div class="item-main">
                  <div class="item-line">
                    @if (item.IWebMenuOrderSeq.HasValue)
                    {
                      <span class="item-seq">[@item.IWebMenuOrderSeq]</span>
                    }
                    <span class="item-code">@item.ItemId</span>
                    <span class="item-dot">·</span>
                    <span class="item-name">@item.ItemName</span>
                    @if (!string.IsNullOrWhiteSpace(item.SWebMenuId))
                    {
                      <span class="item-dot">·</span>
                      <span class="item-code">@item.SWebMenuId</span>
                    }
                  </div>
                </div>
                <div class="item-status">
                  @if (item.Enabled == 1)
                  {
                    <span class="badge bg-success">已啟用</span>
                  }
                  else
                  {
                    <span class="badge badge-empty"></span>
                  }
                  @if (item.IWebEnable == 1)
                  {
                    <span class="badge bg-primary">前台啟用</span>
                  }
                  else
                  {
                    <span class="badge badge-empty"></span>
                  }
                </div>
              </div>
          </li>
        }
      }
    </ul>
  }
  else
  {
    <div class="d-flex justify-content-between align-items-center mb-2">
      <h4 class="mb-0">功能列表</h4>
    </div>
    <p>請從左側展開模組並選擇子模組查看功能</p>
  }
  </div>
</div>

