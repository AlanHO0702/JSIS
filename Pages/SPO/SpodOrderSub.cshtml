@page "{PaperNum}"
@model SpodOrderSubModel
@{
    ViewData["TableTitle"] = $"訂單明細（{Model.MasterKey}）";
    ViewData["DictTableName"] = Model.TableName;
    ViewData["AddApiUrl"] = "/api/SPOdOrderMain";         // /api/SpodOrderSub
    ViewData["SubRouteTemplate"] = "/SPO/SpodOrderSub/{PaperNum}";
    ViewData["QueryRedirectUrl"] = Url.Page("/SPO/SpodOrderMain");   // 返回的主頁面
    ViewData["DeleteApiUrl"] = "SpodOrderMain";   
    ViewData["ReportSpName"] = "SPOdOrderPaper_CIR";
    ViewData["ActionRailPartial"] = "~/Pages/SPO/OrderSubCustomButton.cshtml"; // ← 指定本頁的按鈕 
}
<script>window._dictTableName = "@(ViewData["DictTableName"] ?? Model.TableName)";</script>
@await Html.PartialAsync("~/Pages/Shared/_TableDetailPartial.cshtml", Model)
@{
    var extraTabs = ViewData["Tabs"] as dynamic[] ?? Array.Empty<dynamic>();
}
<!-- MultiTabDebug: @(ViewData["MultiTabDebug"] ?? "") -->
@if (extraTabs.Length > 0)
{
    <div class="container-fluid px-0">
        @await Html.PartialAsync("~/Pages/Shared/_MultiTabDetail.cshtml")
    </div>
}
@await Html.PartialAsync("_FieldDictModal", Model.FieldDictList, ViewData)
<script src="~/js/fieldDictModal.js"></script>

