@page "/SPO/SPO00014"
@model PcbErpApi.Pages.SPO.SPO00014Model
@{
    Layout = "_InquiryTemplate";
    ViewData["Title"] = Model.PageTitle;
    ViewData["ShowInqRail"] = false;
}

@section InqHeader {
  <div class="spo14-toolbar">
    <div class="btn-toolbar spo14-toolbar-actions" role="group" aria-label="客戶退貨單查詢操作">
      <button type="button" class="btn toolbar-btn toolbar-btn-icon" id="btnSPO14First" title="第一筆" aria-label="第一筆"><i class="bi bi-chevron-bar-left"></i></button>
      <button type="button" class="btn toolbar-btn toolbar-btn-icon" id="btnSPO14Prev" title="上一筆" aria-label="上一筆"><i class="bi bi-chevron-left"></i></button>
      <button type="button" class="btn toolbar-btn toolbar-btn-icon" id="btnSPO14Next" title="下一筆" aria-label="下一筆"><i class="bi bi-chevron-right"></i></button>
      <button type="button" class="btn toolbar-btn toolbar-btn-icon" id="btnSPO14Last" title="最後一筆" aria-label="最後一筆"><i class="bi bi-chevron-bar-right"></i></button>
      <div id="spo14CountBox" class="toolbar-count-box mode-view">
        <div id="spo14Mode" class="count-line">瀏覽模式</div>
        <div id="spo14Count" class="count-line">@(Model.Items.Count > 0 ? 1 : 0) / @Model.TotalCount</div>
      </div>
      <button type="button" class="btn toolbar-btn" id="btnSPO14Query"><i class="bi bi-search"></i>查詢</button>
      <button type="button" class="btn toolbar-btn" id="btnSPO14Switch"><i class="bi bi-arrow-left-right"></i>切換</button>
      <button type="button" class="btn toolbar-btn" id="btnSPO14Excel"><i class="bi bi-file-earmark-excel"></i>Excel</button>
    </div>
  </div>
}

<script>
  window._itemId = "SPO00014";
  window._dictTableName = "SPOdV_MPSRejectInq";
</script>

<!-- Query Modal (same template as 銷售訂單) -->
<div class="modal fade" id="queryModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    @await Html.PartialAsync("~/Pages/Shared/_QueryPanelPartial.cshtml", (object)(new List<object>()))
  </div>
</div>
@await Html.PartialAsync("~/Pages/Shared/_QueryFieldModals.cshtml")

<div class="inq-table-wrap">
  <table class="table table-sm table-hover align-middle inq-table">
    <thead>
      <tr>
        <th data-field="PaperNum">單據編號</th>
        <th data-field="PaperDate">單據日期</th>
        <th data-field="CustomerId">客戶代碼</th>
        <th data-field="ShortName">客戶名稱</th>
        <th data-field="FinishedName">狀態</th>
        <th data-field="Item">項次</th>
        <th data-field="PartNum">品號</th>
        <th data-field="UOMQnty">UOMQty</th>
        <th data-field="SourNum">來源單號</th>
        <th data-field="SourItem">來源項次</th>
        <th data-field="Treatment">處置</th>
        <th data-field="Defects">不良現象</th>
        <th data-field="ChangedName">更換原因</th>
        <th data-field="ActionName">動作</th>
        <th data-field="Qnty">數量</th>
        <th data-field="PaperId">單據別</th>
      </tr>
    </thead>
    <tbody>
    @if (Model.Items.Count == 0)
    {
      <tr>
        <td colspan="16" class="text-center text-muted py-2">沒有資料</td>
      </tr>
    }
    else
    {
      foreach (var row in Model.Items)
      {
        string Get(string name)
        {
            return row.TryGetValue(name, out var v) ? (v?.ToString() ?? "") : "";
        }
        <tr data-paper-id="@Get("PaperId")" data-paper-num="@Get("PaperNum")">
          <td>@Get("PaperNum")</td>
          <td>@Get("PaperDate")</td>
          <td>@Get("CustomerId")</td>
          <td>@Get("ShortName")</td>
          <td>@Get("FinishedName")</td>
          <td>@Get("Item")</td>
          <td>@Get("PartNum")</td>
          <td>@Get("UOMQnty")</td>
          <td>@Get("SourNum")</td>
          <td>@Get("SourItem")</td>
          <td>@Get("Treatment")</td>
          <td>@Get("Defects")</td>
          <td>@Get("ChangedName")</td>
          <td>@Get("ActionName")</td>
          <td>@Get("Qnty")</td>
          <td>@Get("PaperId")</td>
        </tr>
      }
    }
    </tbody>
  </table>
</div>

@if (Model.TotalPages > 1)
{
  <div class="d-flex justify-content-between align-items-center flex-wrap gap-1 mt-2">
    <div class="d-flex align-items-center gap-1">
      <a class="btn btn-outline-secondary btn-sm @(Model.PageNumber <= 1 ? "disabled" : "")"
         href="@(Model.PageNumber <= 1 ? "#" : BuildPageUrl(Model.PageNumber - 1))">上一頁</a>
      <span>Page: <strong>@Model.PageNumber</strong> / <span>@Model.TotalPages</span></span>
      <a class="btn btn-outline-secondary btn-sm @(Model.PageNumber >= Model.TotalPages ? "disabled" : "")"
         href="@(Model.PageNumber >= Model.TotalPages ? "#" : BuildPageUrl(Model.PageNumber + 1))">下一頁</a>
    </div>
    <div class="text-muted">Total: @Model.TotalCount</div>
  </div>
}

@functions{
    string BuildPageUrl(int page)
    {
        var map = ViewContext.HttpContext.Request.Query.ToDictionary(k => k.Key, v => v.Value.ToString(), StringComparer.OrdinalIgnoreCase);
        map["page"] = page.ToString();
        map["pageSize"] = Model.PageSize.ToString();
        var qs = Microsoft.AspNetCore.Http.QueryString.Create(map).ToString();
        return qs;
    }
}

<style>
  .inq-table-wrap {
    border: 1px solid #d8dee8;
    border-radius: 8px;
    background: #fff;
    padding: 6px;
    overflow-x: auto;
  }
  .inq-table th,
  .inq-table td {
    white-space: nowrap;
    font-size: 0.82rem;
    padding: 4px 6px;
  }
  .inq-table th {
    background: #f3f7ff;
    color: #2056ac;
    font-weight: 600;
  }
  .inq-table th.inq-sort-asc::after {
    content: " ▲";
    font-size: 0.7em;
    color: #1f3a8a;
  }
  .inq-table th.inq-sort-desc::after {
    content: " ▼";
    font-size: 0.7em;
    color: #1f3a8a;
  }
  .inq-table tbody tr {
    cursor: pointer;
  }
  .inq-table tbody tr.table-active td {
    background: var(--bs-table-active-bg);
  }

  .spo14-toolbar {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 6px 8px;
    border: 1px solid #d8dee8;
    border-radius: 10px;
    background: var(--section-bg-toolbar, #f6f7f9);
  }
  .spo14-toolbar-actions {
    display: flex;
    align-items: center;
    gap: 6px;
    flex-wrap: wrap;
  }
  .toolbar-count-box {
    display: inline-flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 30px;
    min-width: 74px;
    padding: 2px 8px;
    border-radius: 6px;
    font-weight: 700;
    line-height: 1.05;
    color: #fff;
